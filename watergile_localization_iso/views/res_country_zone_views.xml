<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire -->
    <record id="view_country_zone_form" model="ir.ui.view">
        <field name="name">res.country.zone.form</field>
        <field name="model">res.country.zone</field>
        <field name="arch" type="xml">
            <form string="Zone géographique">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la zone"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" placeholder="ex: EU"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pays" name="countries">
                            <field name="country_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste -->
    <record id="view_country_zone_tree" model="ir.ui.view">
        <field name="name">res.country.zone.tree</field>
        <field name="model">res.country.zone</field>
        <field name="arch" type="xml">
            <tree string="Zones géographiques">
                <field name="code"/>
                <field name="name"/>
                <field name="country_ids" widget="many2many_tags"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_country_zone_search" model="ir.ui.view">
        <field name="name">res.country.zone.search</field>
        <field name="model">res.country.zone</field>
        <field name="arch" type="xml">
            <search string="Rechercher une zone">
                <field name="name" string="Zone"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="country_ids"/>
                <separator/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Code" name="code" context="{'group_by': 'code'}"/>
                </group>
            </search>
        </field>
    </record>

    

</odoo>