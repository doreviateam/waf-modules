<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action de menu -->
    <record id="action_country_zone" model="ir.actions.act_window">
        <field name="name">Zones géographiques</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.country.zone</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_country_zone_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle zone géographique
            </p>
            <p>
                Les zones géographiques permettent de regrouper les pays 
                selon des critères géographiques, économiques ou autres.
            </p>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_localization"
              name="Localisation"
              parent="watergile_core.menu_watergile_root"
              sequence="80"/>

    <!-- Élément de menu -->
    <menuitem id="menu_country_zone"
              name="Zones géographiques"
              action="action_country_zone"
              parent="menu_localization"
              sequence="10"/>



</odoo>