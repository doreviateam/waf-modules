<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dispatch_group_wizard_form" model="ir.ui.view">
        <field name="name">dispatch.group.wizard.form</field>
        <field name="model">dispatch.group.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="scheduled_date"/>
                            <field name="delivery_address_id" domain="[('id', 'in', delivery_addresses)]"/>
                            <field name="delivery_addresses" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Dispatches à regrouper">
                            <field name="dispatch_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="scheduled_date"/>
                                    <field name="delivery_address_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_group_dispatches" 
                            string="Créer BL" 
                            type="object" 
                            class="btn-primary"/>
                    <button special="cancel" 
                            string="Annuler" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_dispatch_group_wizard" model="ir.actions.act_window">
        <field name="name">Regrouper les dispatches</field>
        <field name="res_model">dispatch.group.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo> 