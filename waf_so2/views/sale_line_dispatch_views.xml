<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire -->
        <record id="sale_line_dispatch_form_view" model="ir.ui.view">
            <field name="name">sale.line.dispatch.form.view</field>
            <field name="model">sale.line.dispatch</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" 
                                string="Confirmer" 
                                type="object" 
                                class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="action_create_picking" 
                                string="Créer BL" 
                                type="object"
                                class="btn-primary"
                                invisible="state != 'confirmed'"/>
                        <button name="action_cancel" 
                                string="Annuler" 
                                type="object"
                                invisible="state != 'confirmed'"/>
                        <button name="action_view_picking"
                                string="Voir BL"
                                type="object"
                                class="btn-secondary"
                                invisible="state != 'picking' or not picking_id"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <field name="picking_count" invisible="1"/>
                        <field name="move_count" invisible="1"/>
                        <widget name="web_ribbon" title="Annulé" invisible="state != 'cancel'"/>
                        <div class="oe_title">
                            <h1 class="mb32">
                                <field name="sale_order_id" readonly="state != 'draft'"/> - 
                                <field name="product_id" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" invisible="1"/>
                                <field name="sale_order_line_id" readonly="state != 'draft'"/>
                                <field name="delivery_address_id" readonly="state != 'draft'"/>
                                <field name="commitment_date"/>
                                <field name="scheduled_date" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="product_id" readonly="1"/>
                                <field name="available_qty" readonly="1"/>
                                <field name="product_uom_qty" readonly="state != 'draft'"/>
                                <field name="product_uom" readonly="1"/>
                            </group>
                            <group>
                                <field name="price_unit" readonly="state != 'draft'"/>
                                <field name="discount" readonly="state != 'draft'"/>
                                <field name="tax_id" widget="many2many_tags" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="amount_untaxed"/>
                                <field name="amount_tax"/>
                                <field name="amount_total"/>
                            </group>
                            <group>
                                <field name="dispatch_progress" widget="percentage"/>
                            </group>
                            <group>
                                <field name="dispatch_group_id"/>
                                <field name="grouped_with_ids" widget="many2many_tags" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Bon de livraison" invisible="not picking_id">
                                <group>
                                    <field name="picking_id" readonly="1"/>
                                </group>
                            </page>
                            <page string="Mouvements de stock" invisible="move_count == 0">
                                <field name="move_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="product_uom_qty"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue liste -->
        <record id="view_sale_line_dispatch_tree" model="ir.ui.view">
            <field name="name">sale.line.dispatch.tree</field>
            <field name="model">sale.line.dispatch</field>
            <field name="arch" type="xml">
                <tree string="Dispatches">
                    <field name="sale_order_id"/>
                    <field name="sale_order_line_id"/>
                    <field name="product_id"/>
                    <field name="available_qty"/>
                    <field name="product_uom_qty"/>
                    <field name="dispatch_progress" widget="percentage"/>
                    <field name="state"/>
                    <field name="delivery_address_id"/>
                    <field name="scheduled_date"/>
                    <field name="picking_id"/>
                    <field name="dispatch_group_id"/>
                </tree>
            </field>
        </record>

        <!-- Vue kanban -->
        <record id="sale_line_dispatch_kanban_view" model="ir.ui.view">
            <field name="name">sale.line.dispatch.kanban.view</field>
            <field name="model">sale.line.dispatch</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="sale_order_id"/>
                    <field name="product_id"/>
                    <field name="available_qty"/>
                    <field name="product_uom_qty"/>
                    <field name="delivery_address_id"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_card">
                                    <div class="oe_kanban_card_title">
                                        <strong><field name="sale_order_id"/></strong>
                                    </div>
                                    <div class="oe_kanban_card_body">
                                        <ul>
                                            <li>
                                                <field name="product_id"/>
                                                (<field name="available_qty"/>/<field name="product_uom_qty"/>)
                                            </li>
                                            <li><field name="delivery_address_id"/></li>
                                        </ul>
                                    </div>
                                    <div class="oe_kanban_card_footer">
                                        <field name="state" widget="label_selection" 
                                               options="{'classes': {'draft': 'default', 'confirmed': 'success', 'cancel': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue recherche -->
        <record id="sale_line_dispatch_search_view" model="ir.ui.view">
            <field name="name">sale.line.dispatch.search.view</field>
            <field name="model">sale.line.dispatch</field>
            <field name="arch" type="xml">
                <search>
                    <field name="sale_order_id"/>
                    <field name="delivery_address_id"/>
                    <field name="product_id"/>
                    <field name="state"/>
                    <separator/>
                    <filter string="Brouillons" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmés" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Annulés" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <group expand="0" string="Regrouper par">
                        <filter string="Commande" name="sale_order" context="{'group_by': 'sale_order_id'}"/>
                        <filter string="Adresse" name="address" context="{'group_by': 'delivery_address_id'}"/>
                        <filter string="Produit" name="product" context="{'group_by': 'product_id'}"/>
                        <filter string="État" name="state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_sale_line_dispatch" model="ir.actions.act_window">
            <field name="name">Dispatches</field>
            <field name="res_model">sale.line.dispatch</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier dispatch !
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_sale_line_dispatch"
                  name="Dispatches"
                  action="action_sale_line_dispatch"
                  parent="sale.sale_order_menu"
                  sequence="20"/>
    </data>
</odoo> 