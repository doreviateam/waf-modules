<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire de commande de vente -->
        <record id="view_order_form_inherit_waf_so2" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.waf.so2</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Champ delivery_mode -->
                <field name="partner_id" position="before">
                    <field name="delivery_mode" 
                           widget="radio" 
                           options="{'horizontal': true}"/>
                </field>

                <!-- Smart button pour les dispatches -->
                <div name="button_box" position="inside">
                    <button name="action_view_dispatches" 
                            type="object"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="delivery_mode != 'dispatch'">
                        <field name="dispatch_count" widget="statinfo" string="Dispatches"/>
                    </button>
                </div>

                <!-- Boutons de verrouillage et actions -->
                <xpath expr="//header" position="inside">
                    <field name="locked" invisible="1"/>
                    <button name="action_lock" type="object" string="Verrouiller" class="btn-secondary" invisible="locked"/>
                    <button name="action_unlock" type="object" string="Déverrouiller" class="btn-secondary" invisible="not locked"/>
                    
                    <!-- Bouton pour créer les dispatches -->
                    <button name="action_open_mass_dispatch_wizard"
                            string="Créer Dispatch"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'sale' or delivery_mode != 'dispatch' or dispatch_progress >= 100"/>
                </xpath>

                <!-- Page Dispatches unifiée -->
                <xpath expr="//notebook" position="inside">
                    <page string="Dispatches" 
                          name="dispatches" 
                          invisible="delivery_mode != 'dispatch'">
                        <div>
                            <button name="action_open_mass_dispatch_wizard"
                                    string="Créer Dispatch"
                                    type="object"
                                    class="btn-primary"/>
                        </div>
                        <field name="dispatch_ids" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="sale_order_line_id"/>
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="delivery_address_id"/>
                                <field name="scheduled_date"/>
                                <field name="dispatch_group_id"/>
                                <field name="picking_id"/>
                                <field name="state" decoration-success="state == 'picking'"
                                                 decoration-info="state == 'confirmed'"
                                                 decoration-danger="state == 'cancel'"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer">
                            <field name="dispatch_progress" widget="progressbar"/>
                        </group>
                    </page>
                </xpath>

                <!-- Autres informations -->
                <xpath expr="//page[@name='other_information']" position="inside">
                    <group>
                        <group name="delivery_addresses" 
                               string="Parties prenantes" 
                               invisible="delivery_mode != 'dispatch'">
                            <field name="delivery_addresses" widget="many2many_tags"/>
                        </group> 
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Vue liste de commande de vente -->
        <record id="sale_order_tree_view" model="ir.ui.view">
            <field name="name">sale.order.tree.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="has_delivery_addresses" invisible="1"/>
                    <field name="delivery_mode" 
                           decoration-danger="delivery_mode == 'dispatch' and not has_delivery_addresses" 
                           optional="hide"/>
                    <field name="dispatch_progress" 
                           widget="percentage"
                           invisible="delivery_mode != 'dispatch'"
                           decoration-danger="dispatch_progress &lt; 100"
                           decoration-success="dispatch_progress == 100"
                           optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
