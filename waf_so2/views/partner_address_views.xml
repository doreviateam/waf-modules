<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire -->
        <record id="view_partner_address_form" model="ir.ui.view">
            <field name="name">partner.address.form</field>
            <field name="model">partner.address</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_archive" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-archive"
                                invisible="not active">
                            Archiver
                        </button>
                        <button name="action_unarchive" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-archive"
                                invisible="active">
                            Désarchiver
                        </button>
                        <field name="active" widget="boolean_button"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'adresse..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="main_partner_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Adresse">
                                <group>
                                    <group>
                                        <field name="street"/>
                                        <field name="street2"/>
                                        <field name="zip"/>
                                    </group>
                                    <group>
                                        <field name="city"/>
                                        <field name="state_id"/>
                                        <field name="country_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Clients associés">
                                <field name="partner_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="company_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Dispatches" name="dispatches">
                                <field name="sale_line_dispatch_ids">
                                    <tree>
                                        <field name="sale_order_id"/>
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue liste -->
        <record id="view_partner_address_tree" model="ir.ui.view">
            <field name="name">partner.address.tree</field>
            <field name="model">partner.address</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="main_partner_id"/>
                    <field name="city"/>
                    <field name="zip"/>
                    <field name="dispatch_count"/>
                </tree>
            </field>
        </record>

        <!-- Vue recherche -->
        <record id="view_partner_address_search" model="ir.ui.view">
            <field name="name">partner.address.search</field>
            <field name="model">partner.address</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_ids"/>
                    <field name="city"/>
                    <field name="zip"/>
                    <separator/>
                    <filter string="Archivés" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                    <group expand="0" string="Regrouper par">
                        <filter string="Type" name="type" context="{'group_by': 'type'}"/>
                        <filter string="Ville" name="city" context="{'group_by': 'city'}"/>
                        <filter string="Code postal" name="zip" context="{'group_by': 'zip'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_partner_address" model="ir.actions.act_window">
            <field name="name">Adresses de livraison</field>
            <field name="res_model">partner.address</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_partner_address"
                  name="Adresses de livraison"
                  parent="sale.sale_menu_root"
                  action="action_partner_address"
                  sequence="30"/>
    </data>
</odoo> 