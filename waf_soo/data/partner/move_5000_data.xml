<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Produit Move 5000 Bluetooth CLESS -->
        <record id="product_move_5000" model="product.template">
            <field name="name">Move 5000 Bluetooth CLESS</field>
            <!-- Type de produit -->
            <field name="type">consu</field>
            <field name="detailed_type">consu</field>
            
            <!-- Prix -->
            <field name="list_price">352.99</field>
            <field name="standard_price">352.99</field>
            <field name="currency_id" ref="base.EUR"/>
            
            <!-- Unités de mesure -->
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            
            <!-- Informations produit -->
            <field name="default_code">MOVE5000BT</field>
            <field name="barcode">MOVE5000BT</field>
            <field name="categ_id" ref="product.product_category_all"/>
