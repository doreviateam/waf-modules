<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Devis pour CM Siège -->
        <record id="sale_order_cm_move5000" model="sale.order">
            <!-- Informations générales -->
            <field name="partner_id" ref="partner_cm_siege"/>
            <field name="date_order" eval="datetime.now()"/>
            <field name="validity_date" eval="(datetime.now() + timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="user_id" ref="base.user_admin"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="state">draft</field>
        </record>

        <!-- Ligne de devis -->
        <record id="sale_order_line_cm_move5000" model="sale.order.line">
            <field name="order_id" ref="sale_order_cm_move5000"/>
            <field name="product_id" ref="product_move_5000"/>
            <field name="product_uom_qty">10</field>
            <field name="product_uom" ref="uom.product_uom_unit"/>
            <field name="price_unit">352.99</field>
            <field name="name">Move 5000 Bluetooth CLESS</field>
        </record>
    </data>
</odoo>
