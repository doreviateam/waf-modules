<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Catégorie -->
        <record id="module_category_waf_soo" model="ir.module.category">
            <field name="name">SOO</field>
            <field name="description">Gestion des calendriers et jours fériés</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groupes -->
        <record id="group_waf_soo_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="module_category_waf_soo"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_waf_soo_manager" model="res.groups">
            <field name="name">Responsable</field>
            <field name="category_id" ref="module_category_waf_soo"/>
            <field name="implied_ids" eval="[(4, ref('group_waf_soo_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Règles d'accès pour les modèles externes -->
        <record id="rule_stock_picking_user" model="ir.rule">
            <field name="name">Stock Picking User Access</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="groups" eval="[(4, ref('group_waf_soo_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_stock_move_user" model="ir.rule">
            <field name="name">Stock Move User Access</field>
            <field name="model_id" ref="stock.model_stock_move"/>
            <field name="groups" eval="[(4, ref('group_waf_soo_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle multi-société pour le dispatch -->
        <record id="rule_sale_line_dispatch_company" model="ir.rule">
            <field name="name">Dispatch des commandes : règle multi-société</field>
            <field name="model_id" ref="model_sale_line_dispatch"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>
    </data>
</odoo>
