<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_delivery_zone_form" model="ir.ui.view">
        <field name="name">delivery.zone.form</field>
        <field name="model">delivery.zone</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" string="Activer" type="object" class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_draft" string="Remettre en brouillon" type="object"
                            invisible="state != 'active'"/>
                    <button name="action_archive" string="Archiver" type="object" 
                            invisible="state != 'active'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_partners" type="object" class="oe_stat_button" icon="fa-address-book">
                            <field name="partner_count" widget="statinfo" string="Points de livraison"/>
                        </button>
                        <button name="action_view_deliveries" type="object" class="oe_stat_button" icon="fa-truck">
                            <field name="delivery_count" widget="statinfo" string="Livraisons"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="ex: ZONE/00001"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="active" invisible="1"/>
                            <field name="carrier_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="last_delivery_date" readonly="1"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Points de livraison" name="delivery_points">
                            <field name="partner_ids" context="{'default_country_id': country_id}">
                                <tree>
                                    <field name="name"/>
                                    <field name="street"/>
                                    <field name="zip"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                    <field name="phone"/>
                                    <field name="mobile"/>
                                    <field name="email"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Instructions de livraison" name="delivery_instructions">
                            <field name="delivery_instructions"/>
                        </page>
                        <page string="Codes postaux" name="zip_codes">
                            <group>
                                <group>
                                    <field name="company_id" invisible="1"/>
                                    <field name="country_id"/>
                                    <field name="state_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                            <group>
                                <field name="zip_prefix_ids" widget="many2many_tags"/>
                            </group>
                                <!-- <field name="zip_prefix_ids">
                                    <tree editable="bottom">
                                    <field name="zip_prefix" placeholder="Ex: 971, 972, 973"/>
                                </tree>
                            </field> -->
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_delivery_zone_tree" model="ir.ui.view">
        <field name="name">delivery.zone.tree</field>
        <field name="model">delivery.zone</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="country_id"/>
                <field name="state_ids" widget="many2many_tags"/>
                <field name="carrier_ids" widget="many2many_tags"/>
                <field name="zip_prefix_ids" widget="many2many_tags"/>
                <field name="partner_count"/>
                <field name="delivery_count"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_delivery_zone_kanban" model="ir.ui.view">
        <field name="name">delivery.zone.kanban</field>
        <field name="model">delivery.zone</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="country_id"/>
                <field name="zip_prefix_ids"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Modifier</a>
                                    <div role="separator" class="dropdown-divider"/>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="country_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="zip_prefix_ids" widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_delivery_zone_search" model="ir.ui.view">
        <field name="name">delivery.zone.search</field>
        <field name="model">delivery.zone</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="country_id"/>
                <field name="state_ids"/>
                <field name="carrier_ids"/>
                <field name="partner_ids"/>
                <field name="zip_prefix_ids"/>
                <filter string="Mes zones" name="my_zones" domain="[('create_uid', '=', uid)]"/>
                <filter string="Zones actives" name="active_zones" domain="[('state', '=', 'active')]"/>
                <filter string="Zones archivées" name="archived_zones" domain="[('state', '=', 'archived')]"/>
                <separator/>
                <filter string="Pays" name="country" context="{'group_by': 'country_id'}"/>
                <filter string="État" name="state" context="{'group_by': 'state'}"/>
                <filter string="Société" name="company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
            </search>
        </field>
    </record>
</odoo>
