<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue arborescente -->
    <record id="view_sale_line_dispatch_tree" model="ir.ui.view">
        <field name="name">sale.line.dispatch.tree</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <tree string="Dispatches" 
                  decoration-info="state == 'draft'" 
                  decoration-success="state == 'done'" 
                  decoration-warning="state == 'picking'" 
                  decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="product_id"/>
                <field name="stakeholder_id"/>
                <field name="delivery_address_id"/>
                <field name="quantity"/>
                <field name="line_remaining_qty"/>
                <field name="amount_total"/>
                <field name="planned_date"/>
                <field name="effective_date"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_sale_line_dispatch_form" model="ir.ui.view">
        <field name="name">sale.line.dispatch.form</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <form string="Dispatch">
                <header>
                    <button name="action_confirm" type="object" string="Confirmer"
                            invisible="state != 'draft'"
                            class="oe_highlight"/>
                    <button name="action_create_picking" type="object" string="Créer BL"
                            invisible="state != 'confirmed'"
                            class="oe_highlight"/>
                    <button name="action_done" type="object" string="Terminer"
                            invisible="state != 'picking'"
                            class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Annuler"
                            invisible="state not in ('draft', 'confirmed')"/>
                    <button name="action_archive" type="object" 
                            string="Archiver" groups="base.group_user"
                            invisible="state != 'cancel'" class="btn btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,picking,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_order_id" 
                                   readonly="state != 'draft'"
                                   required="state == 'draft'"
                                   domain="[('delivery_mode', '=', 'dispatch'), ('state', '=', 'sale')]"
                                   options="{'no_create': True}"
                                   help="Seules les commandes confirmées en mode 'Dispatch' peuvent être sélectionnées."/>
                            <field name="sale_order_line_id"
                                   readonly="state != 'draft'"
                                   required="state == 'draft'"
                                   domain="[('order_id', '=', sale_order_id), ('dispatch_required', '=', True)]"
                                   options="{'no_create': True}"
                                   help="Seules les lignes de commande avec l'option 'Dispatch requis' activée peuvent être dispatchées."/>
                            <field name="product_id" readonly="1"/>
                            <field name="product_uom" readonly="1"/>
                            <field name="line_remaining_qty" readonly="1" 
                                   decoration-info="line_remaining_qty > 0"
                                   decoration-warning="line_remaining_qty == 0"/>
                            <field name="quantity"
                                   readonly="state != 'draft'"
                                   required="state == 'draft'"
                                   default="1"/>
                        </group>
                        <group>
                            <field name="stakeholder_id"
                                   readonly="state != 'draft'"
                                   required="state == 'draft'"/>
                            <field name="delivery_address_id"
                                   readonly="state != 'draft'"
                                   required="state == 'draft'"/>
                            <field name="planned_date"
                                   readonly="state != 'draft'"
                                   required="state == 'draft'"/>
                            <field name="effective_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="unit_price" readonly="1"/>
                            <field name="amount_total" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    

    <!-- Vue recherche -->
    <record id="view_sale_line_dispatch_search" model="ir.ui.view">
        <field name="name">sale.line.dispatch.search</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <search string="Rechercher des dispatches">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="product_id"/>
                <field name="stakeholder_id"/>
                <field name="delivery_address_id"/>
                <separator/>
                <filter string="Mes dispatches" name="my_dispatches" domain="[('create_uid', '=', uid)]"/>
                <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Expédié" name="shipped" domain="[('state', '=', 'shipped')]"/>
                <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Annulé" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Commande" name="group_by_order" context="{'group_by': 'sale_order_id'}"/>
                    <filter string="Produit" name="group_by_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Intervenant" name="group_by_stakeholder" context="{'group_by': 'stakeholder_id'}"/>
                    <filter string="État" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Date planifiée" name="group_by_date" context="{'group_by': 'planned_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>