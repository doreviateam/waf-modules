        <record id="action_societe" model="ir.actions.act_window">
            <field name="name">Sociétés</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_company', '=', True)]</field>
            <field name="context" eval="{'default_is_company': True}"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première société
                </p>
            </field>
        </record>

        <record id="action_delivery_carrier" model="ir.actions.act_window">
            <field name="name">Transporteurs</field>
            <field name="res_model">delivery.carrier</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier transporteur
                </p>
            </field>
        </record>

        <record id="action_stock_picking" model="ir.actions.act_window">
            <field name="name">Commandes de livraison</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première commande de livraison
                </p>
            </field>
        </record>

        <record id="action_stock_picking_type" model="ir.actions.act_window">
            <field name="name">Types d'opérations</field>
            <field name="res_model">stock.picking.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_stock_move" model="ir.actions.act_window">
            <field name="name">Mouvements de stock</field>
            <field name="res_model">stock.move</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Action pour les zones de livraison -->
        <record id="action_delivery_zone" model="ir.actions.act_window">
            <field name="name">Zones de livraison</field>
            <field name="res_model">delivery.zone</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_delivery_zone_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première zone de livraison !
                </p>
                <p>
                    Les zones de livraison vous permettent de définir des secteurs géographiques
                    pour organiser vos livraisons et associer des transporteurs spécifiques.
                </p>
            </field>
        </record>

        <!-- Action pour toutes les commandes -->
        <record id="action_soo_sale_order" model="ir.actions.act_window">
            <field name="name">Commandes WAF</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première commande
                </p>
            </field>
        </record>

        <!-- Action pour les dispatches -->
        <record id="action_sale_line_dispatch" model="ir.actions.act_window">
            <field name="name">Dispatches</field>
            <field name="res_model">sale.line.dispatch</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier dispatch
                </p>
            </field>
        </record>

        <!-- Action pour les adresses -->
        <record id="action_partner_address" model="ir.actions.act_window">
            <field name="name">Adresses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.address</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_partner_address_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ajouter une nouvelle adresse
                </p>
            </field>
        </record>


        <record id="action_general_settings" model="ir.actions.act_window">
            <field name="name">Paramètres généraux</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configurez les paramètres généraux de votre système
                </p>
            </field>
        </record>

        <!-- Action pour archiver un dispatch -->
        <record id="action_archive_sale_line_dispatch" model="ir.actions.server">
            <field name="name">Archiver les dispatches</field>
            <field name="model_id" ref="model_sale_line_dispatch"/>
            <field name="binding_model_id" ref="model_sale_line_dispatch"/>
            <field name="state">code</field>
            <field name="code">
                records.action_archive()
            </field>
        </record>

        

    </data>
</odoo>
