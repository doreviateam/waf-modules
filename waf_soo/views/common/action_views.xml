<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_calendar_holiday" model="ir.actions.act_window">
            <field name="name">Jours fériés</field>
            <field name="res_model">calendar.holiday</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="waf_soo.view_calendar_holiday_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier jour férié
                </p>
            </field>
        </record>

        <record id="action_calendar_region" model="ir.actions.act_window">
            <field name="name">Régions</field>
            <field name="res_model">calendar.region</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="waf_soo.view_calendar_region_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première région
                </p>
            </field>
        </record>

        <record id="action_societe" model="ir.actions.act_window">
            <field name="name">Sociétés</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_company', '=', True)]</field>
            <field name="context" eval="{'default_is_company': True}"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première société
                </p>
            </field>
        </record>

        <record id="action_delivery_carrier" model="ir.actions.act_window">
            <field name="name">Transporteurs</field>
            <field name="res_model">delivery.carrier</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier transporteur
                </p>
            </field>
        </record>

        <record id="action_stock_picking" model="ir.actions.act_window">
            <field name="name">Commandes de livraison</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première commande de livraison
                </p>
            </field>
        </record>

        <record id="action_stock_move" model="ir.actions.act_window">
            <field name="name">Mouvements de stock</field>
            <field name="res_model">stock.move</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Action pour les zones de livraison -->
        <record id="action_delivery_zone" model="ir.actions.act_window">
            <field name="name">Zones de livraison</field>
            <field name="res_model">delivery.zone</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_delivery_zone_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première zone de livraison !
                </p>
                <p>
                    Les zones de livraison vous permettent de définir des secteurs géographiques
                    pour organiser vos livraisons et associer des transporteurs spécifiques.
                </p>
            </field>
        </record>

        <!-- Action pour toutes les commandes -->
        <record id="action_soo_sale_order" model="ir.actions.act_window">
            <field name="name">Commandes WAF</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première commande
                </p>
            </field>
        </record>

        <!-- Action pour les dispatches -->
        <record id="action_sale_line_dispatch" model="ir.actions.act_window">
            <field name="name">Dispatch des commandes</field>
            <field name="res_model">sale.line.dispatch</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_sale_line_dispatch_search"/>
            <field name="context">{
                'search_default_draft': 1,
                'default_state': 'draft'
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier dispatch de commande
                </p>
                <p>
                    Le dispatch des commandes permet de répartir les quantités 
                    commandées entre différentes parties prenantes.
                </p>
            </field>
        </record>

    </data>
</odoo>
