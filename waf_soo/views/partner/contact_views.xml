<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue Formulaire -->
        <record id="view_partner_region_form" model="ir.ui.view">
            <field name="name">res.partner.region.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <sheet>
                    <group>
                        <group>
                            <field name="parent_id" 
                                options="{'no_create': True, 'no_create_edit': True}"
                                domain="[('is_company', '=', True), ('id', '!=', id)]"
                                placeholder="Entreprise parente"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page name="contact_addresses" string="Adresses">
                            <group>
                                <field name="child_ids" context="{'default_parent_id': active_id}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <group name="delivery_addresses" string="Adresses de livraison">
                                    <field name="address_ids" 
                                        widget="many2many_tags" 
                                        options="{'no_create': True, 'no_create_edit': True}"
                                        context="{'default_type': 'delivery'}"
                                        string="Contacts clients"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </field>
        </record>

        <!-- Vue Liste -->
        <record id="view_partner_region_tree" model="ir.ui.view">
            <field name="name">res.partner.region.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <!-- Vue Kanban -->
        <record id="view_partner_region_kanban" model="ir.ui.view">
            <field name="name">res.partner.region.kanban</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="country_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div t-if="record.email.raw_value">
                                        <field name="email"/>
                                    </div>
                                    <div t-if="record.phone.raw_value">
                                        <field name="phone"/>
                                    </div>
                                    <div t-if="record.country_id.raw_value">
                                        <field name="country_id"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>