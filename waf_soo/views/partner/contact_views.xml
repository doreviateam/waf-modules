<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Vue Formulaire -->
        <record id="view_partner_region_form" model="ir.ui.view">
            <field name="name">res.partner.region.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Modification du champ parent_id -->
                <xpath expr="//field[@name='parent_id']" position="replace">
                    <field name="parent_id" 
                        options="{'no_create': True, 'no_create_edit': True}"
                        domain="[('is_company', '=', True), ('id', '!=', id)]"
                        placeholder="Entreprise parente"/>
                </xpath>
                
                <!-- Remplacement du bloc pays/rÃ©gion -->
                <field name="country_id" position="before">
                    <field name="region_id" 
                           options="{'no_create': True}"
                           domain="[('country_id', '=', country_id)]"
                           invisible="country_id != %(base.fr)d"
                           force_save="1"/>
                </field>
            </field>
        </record>

        <!-- Vue Liste -->
        <record id="view_partner_region_tree" model="ir.ui.view">
            <field name="name">res.partner.region.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="country_id" position="before">
                    <field name="region_id"
                        optional="show"
                        column_invisible="context.get('country_code') != 'FR'"/>
                </field>
            </field>
        </record>

        <!-- Vue Kanban -->
        <record id="view_partner_region_kanban" model="ir.ui.view">
            <field name="name">res.partner.region.kanban</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_kanban_details')]//div[last()]" position="after">
                    <div invisible="1">
                        <field name="country_id"/>
                    </div>
                    <div t-if="record.region_id.raw_value and record.country_id.raw_value == 'FR'">
                        <field name="region_id"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>