<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue arborescente -->
    <record id="view_partner_address_tree" model="ir.ui.view">
        <field name="name">partner.address.tree</field>
        <field name="model">partner.address</field>
        <field name="arch" type="xml">
            <tree string="Adresses" decoration-muted="not active">
                <field name="name"/>
                <field name="street"/>
                <field name="zip"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="type"/>
                <field name="dispatch_count"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_partner_address_form" model="ir.ui.view">
        <field name="name">partner.address.form</field>
        <field name="model">partner.address</field>
        <field name="arch" type="xml">
            <form string="Adresse">
                <header>
                    <button name="action_archive" type="object" 
                            string="Archiver" 
                            invisible="not active"/>
                    <button name="action_unarchive" type="object" 
                            string="DÃ©sarchiver" 
                            invisible="active"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_dispatches" 
                                type="object"
                                class="oe_stat_button"
                                icon="fa-truck">
                            <field name="dispatch_count" widget="statinfo" string="Dispatches"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de l'adresse"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="main_partner_id"/>
                            <field name="company_ids" widget="many2many_tags" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="zip"/>
                            <field name="city"/>
                            <field name="state_id"/>
                            <field name="country_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Dispatches" name="dispatches">
                            <field name="sale_line_dispatch_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="sale_order_id"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="planned_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_partner_address_search" model="ir.ui.view">
        <field name="name">partner.address.search</field>
        <field name="model">partner.address</field>
        <field name="arch" type="xml">
            <search string="Rechercher des adresses">
                <field name="name"/>
                <field name="street"/>
                <field name="zip"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="partner_ids"/>
                <separator/>
                <filter string="Actives" name="active" domain="[('active', '=', True)]"/>
                <filter string="ArchivÃ©es" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Livraison" name="delivery" domain="[('type', '=', 'delivery')]"/>
                <filter string="Facturation" name="invoice" domain="[('type', '=', 'invoice')]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Type" name="group_by_type" context="{'group_by': 'type'}"/>
                    <filter string="Pays" name="group_by_country" context="{'group_by': 'country_id'}"/>
                    <filter string="Partenaire principal" name="group_by_partner" context="{'group_by': 'main_partner_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
