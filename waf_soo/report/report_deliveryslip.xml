<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template principal qui sera appelé -->
    <template id="report_deliveryslip_waf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- En-tête avec logo et titre -->
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <h2 class="mt-0">Bon de livraison <span t-field="o.name" class="text-primary"/></h2>
                            </div>
                        </div>

                        <!-- Informations principales -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <div t-if="o.should_print_delivery_address()" class="card">
                                    <div class="card-header bg-light">
                                        <strong>Adresse de livraison</strong>
                                    </div>
                                    <div class="card-body" t-if="o.delivery_address_id">
                                        <div t-field="o.delivery_address_name" class="fw-bold mb-2"/>
                                        <address class="mb-0">
                                            <div t-field="o.street"/>
                                            <div t-field="o.street2"/>
                                            <div>
                                                <span t-field="o.zip"/> <span t-field="o.city"/>
                                            </div>
                                            <div t-field="o.state_id"/>
                                            <div t-field="o.country_id"/>
                                        </address>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div t-if="o.picking_type_id.code != 'internal' and o.picking_type_id.warehouse_id.partner_id" class="card">
                                    <div class="card-header bg-light">
                                        <strong>Adresse d'expédition</strong>
                                    </div>
                                    <div class="card-body">
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Informations de livraison -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body p-3">
                                        <div class="row">
                                            <div t-if="o.scheduled_date" class="col-auto">
                                                <strong>Date de livraison prévue:</strong>
                                                <p class="mb-0" t-field="o.scheduled_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/>
                                            </div>
                                            <div t-if="o.origin" class="col-auto">
                                                <strong>Référence:</strong>
                                                <p class="mb-0" t-field="o.origin"/>
                                            </div>
                                            <div t-if="o.partner_id" class="col-auto">
                                                <strong>Client:</strong>
                                                <p class="mb-0" t-field="o.partner_id"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tableau des produits -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <table class="table table-sm table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-start">Produit</th>
                                            <th class="text-center">Quantité</th>
                                            <th t-if="o.picking_type_id.code != 'incoming'" class="text-start">Destination</th>
                                            <th t-if="o.picking_type_id.code != 'outgoing'" class="text-start">Source</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.move_ids_without_package" t-as="move">
                                            <tr>
                                                <td>
                                                    <span t-field="move.product_id"/>
                                                    <p t-if="move.description_picking != move.product_id.name" class="text-muted mb-0">
                                                        <small><span t-field="move.description_picking"/></small>
                                                    </p>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="move.product_uom_qty"/>
                                                    <span t-field="move.product_uom"/>
                                                </td>
                                                <td t-if="o.picking_type_id.code != 'incoming'" class="text-start">
                                                    <span t-field="move.location_dest_id"/>
                                                </td>
                                                <td t-if="o.picking_type_id.code != 'outgoing'" class="text-start">
                                                    <span t-field="move.location_id"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Section signature -->
                        <div class="row mt-5">
                            <div class="col-4 ms-auto">
                                <div class="card">
                                    <div class="card-header bg-light text-center">
                                        <strong>Signature du client</strong>
                                    </div>
                                    <div class="card-body">
                                        <div class="border mb-3" style="min-height: 100px;"/>
                                        <div class="mb-2">
                                            <label class="form-label mb-1">Nom et qualité du signataire:</label>
                                            <div class="border-bottom" style="min-height: 30px;"/>
                                        </div>
                                        <div>
                                            <label class="form-label mb-1">Date:</label>
                                            <div class="border-bottom" style="min-height: 30px;"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Action de rapport pour l'aperçu du bon de livraison -->
    <record id="action_report_delivery_preview" model="ir.actions.report">
        <field name="name">Aperçu Bon de livraison</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">waf_soo.report_deliveryslip_waf</field>
        <field name="report_file">waf_soo.report_deliveryslip_waf</field>
        <field name="print_report_name">'Bon de livraison - %s' % (object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
