<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire héritée -->
    <record id="view_product_template_form_inherit_spare_part" model="ir.ui.view">
        <field name="name">product.template.form.inherit.spare.part</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_spare_part" invisible="1"/>
            </xpath>
            
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="allowed_equipment_ids" widget="many2many_tags" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Vue liste héritée -->
    <record id="view_product_template_tree_inherit_spare_part" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.spare.part</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="after">
                <field name="is_spare_part" optional="hide"/>
            </field>
        </field>
    </record>

    <!-- Vue de recherche pour les pièces détachées -->
    <record id="view_product_template_search_inherit_spare_part" model="ir.ui.view">
        <field name="name">product.template.search.inherit.spare.part</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_spare_part" string="Pièce détachée"/>
            </xpath>
            <xpath expr="//filter[@name='type']" position="after">
                <filter string="Pièces détachées" name="spare_parts" domain="[('is_spare_part', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo> 