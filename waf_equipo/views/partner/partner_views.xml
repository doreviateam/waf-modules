<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire -->
    <record id="view_partner_blaz_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.blaz.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_registry']" position="before">
                <field name="partner_blaz_id"/>
            </xpath>
        </field>
    </record>

    <!-- Vue liste -->
    <record id="view_partner_blaz_tree_inherit" model="ir.ui.view">
        <field name="name">res.partner.blaz.tree.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="partner_blaz_id"/>
            </field>
        </field>
    </record>
</odoo>