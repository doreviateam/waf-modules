<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_dispatch_wizard_form" model="ir.ui.view">
        <field name="name">create.dispatch.wizard.form</field>
        <field name="model">create.dispatch.wizard</field>
        <field name="arch" type="xml">
            <form string="Créer Lignes de dispatching">
                <sheet>
                    <group>
                        <field name="order_id" invisible="1"/>
                        <field name="delivery_partner_ids" invisible="1"/>
                        <field name="sale_order_line_id" 
                               domain="[('order_id', '=', order_id)]"
                               options="{'no_create': True}"
                               required="1"/>
                        <field name="product_id" readonly="1"/>
                    </group>

                    <group>
                        <group string="Quantités">
                            <field name="dispatched_qty" required="1"/>
                            <field name="remaining_qty" readonly="1"/>
                        </group>
                        <group string="Stakeholder">
                            <field name="delivery_partner_id"
                                   string="Adhérent"
                                   domain="[('id', 'in', delivery_partner_ids)]"
                                   options="{'no_create': True, 'no_open': True}"
                                   context="{'show_address': 1}"
                                   required="1"/>
                        </group>
                        <field name="date_dispatch"/>
                    </group>
                    
                    <notebook>
                        <page string="Livraisons planifiées">
                            <field name="delivery_planning_ids">
                                <tree editable="bottom">
                                    <field name="scheduled_date" required="1"/>
                                    <field name="shipping_address_id" 
                                           domain="[('parent_id', '=', parent.delivery_partner_id)]"
                                           required="1"/>
                                    <field name="quantity" required="1"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Enregistrer &amp; Fermer" 
                            name="action_save_close" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Enregistrer &amp; Créer" 
                            name="action_save_create" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Ignorer" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_create_dispatch_wizard" model="ir.actions.act_window">
        <field name="name">Créer Lignes de répartition</field>
        <field name="res_model">create.dispatch.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_create_dispatch_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- Action pour la vue form en modification -->
    <record id="action_sale_order_line_dispatch_form" model="ir.actions.act_window">
        <field name="name">Modifier Dispatch</field>
        <field name="res_model">sale.order.line.dispatch</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>