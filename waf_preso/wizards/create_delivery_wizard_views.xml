<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_delivery_wizard_form" model="ir.ui.view">
        <field name="name">create.delivery.wizard.form</field>
        <field name="model">create.delivery.wizard</field>
        <field name="arch" type="xml">
            <form string="Créer des livraisons">
                <sheet>
                    <group>
                        <field name="company_id" invisible="1"/>
                        <field name="order_id" invisible="1"/>
                        <field name="delivery_date"/>
                        <field name="delivery_time_slot_id" 
                               options="{'no_create': True}"
                               domain="[('id', 'in', available_time_slot_ids)]"/>
                        <field name="delivery_zone_ids" 
                               widget="many2many_tags"
                               options="{'no_create': True}"/>
                        <field name="available_time_slot_ids" invisible="1"/>
                    </group>
                    <group>
                        <field name="partner_ids" 
                               widget="many2many_tags"
                               options="{'no_create': True}"/>
                        <field name="available_partner_ids" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Lignes de livraison">
                            <field name="delivery_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="weight"/>
                                    <field name="remaining_qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_create_deliveries" 
                            string="Créer" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Annuler" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_delivery_wizard" model="ir.actions.act_window">
        <field name="name">Créer des livraisons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.delivery.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo> 