<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Catégorie -->
        <record id="module_category_waf_preso" model="ir.module.category">
            <field name="name">WAF Preso</field>
            <field name="description">Gestion des groupements de partenaires</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groupes -->
        <record id="group_waf_preso_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="module_category_waf_preso"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_waf_preso_manager" model="res.groups">
            <field name="name">Responsable</field>
            <field name="category_id" ref="module_category_waf_preso"/>
            <field name="implied_ids" eval="[(4, ref('group_waf_preso_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Règles de sécurité -->
        <record id="waf_preso_comp_rule" model="ir.rule">
            <field name="name">WAF Preso: règle multi-société</field>
            <field name="model_id" ref="model_partner_groupment"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="waf_preso_interest_comp_rule" model="ir.rule">
            <field name="name">WAF Preso Interest: règle multi-société</field>
            <field name="model_id" ref="model_partner_interest"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>