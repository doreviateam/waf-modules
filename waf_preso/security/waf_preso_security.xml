<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Catégories de sécurité -->
    <record id="module_waf_preso_category" model="ir.module.category">
        <field name="name">WAF Pre-SO</field>
        <field name="sequence">20</field>
    </record>

    <!-- Groupes -->
    <record id="group_waf_preso_user" model="res.groups">
        <field name="name">Utilisateur</field>
        <field name="category_id" ref="module_waf_preso_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_waf_preso_manager" model="res.groups">
        <field name="name">Responsable</field>
        <field name="category_id" ref="module_waf_preso_category"/>
        <field name="implied_ids" eval="[(4, ref('group_waf_preso_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Règles d'accès pour les champs -->
    <record id="access_sale_order_all" model="ir.model.access">
        <field name="name">sale.order.all</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="group_id" ref="base.group_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Règle de droits d'enregistrement pour les commandes -->
    <record id="rule_sale_order_waf" model="ir.rule">
        <field name="name">Accès aux commandes WAF</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>