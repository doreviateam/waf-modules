<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Catégorie de sécurité -->
        <record id="module_category_waf_preso" model="ir.module.category">
            <field name="name">WAF Pre-SO</field>
            <field name="description">Gestion des groupements et zones de livraison</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groupes de sécurité -->
        <record id="group_waf_preso_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="module_category_waf_preso"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_waf_preso_manager" model="res.groups">
            <field name="name">Responsable</field>
            <field name="category_id" ref="module_category_waf_preso"/>
            <field name="implied_ids" eval="[(4, ref('group_waf_preso_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Règles de sécurité multi-société -->
        <record id="partner_groupment_comp_rule" model="ir.rule">
            <field name="name">Groupement multi-société</field>
            <field name="model_id" ref="model_partner_groupment"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Accès aux champs multi-société -->
        <record id="group_waf_preso_multi_company" model="res.groups">
            <field name="name">Multi-société</field>
            <field name="category_id" ref="module_category_waf_preso"/>
            <field name="implied_ids" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

        <!-- Règles -->
        <record id="rule_delivery_zone_company" model="ir.rule">
            <field name="name">Zones de livraison : règle multi-société</field>
            <field name="model_id" ref="model_delivery_zone"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Règles pour les dispatches -->
        <record id="rule_dispatch_delivery_user" model="ir.rule">
            <field name="name">Livraisons: accès utilisateur</field>
            <field name="model_id" ref="model_sale_order_line_dispatch_delivery"/>
            <field name="groups" eval="[(4, ref('group_waf_preso_user'))]"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Règles pour le wizard de création -->
        <record id="rule_create_delivery_wizard_company" model="ir.rule">
            <field name="name">Wizard Création Livraison: règle multi-société</field>
            <field name="model_id" ref="model_create_delivery_wizard"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>

        <!-- Règles pour les lignes du wizard -->
        <record id="rule_create_delivery_wizard_line_company" model="ir.rule">
            <field name="name">Lignes Wizard Création Livraison: règle multi-société</field>
            <field name="model_id" ref="model_create_delivery_wizard_line"/>
            <field name="domain_force">[('wizard_id.company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>

        <!-- Règles pour les lignes de dispatch -->
        <record id="rule_dispatch_line_company" model="ir.rule">
            <field name="name">Lignes de dispatch: règle multi-société</field>
            <field name="model_id" ref="model_sale_order_line_dispatch"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>

        <!-- Règles d'accès par état -->
        <record id="rule_dispatch_state_user" model="ir.rule">
            <field name="name">Accès aux états pour utilisateurs</field>
            <field name="model_id" ref="model_sale_order_line_dispatch_delivery"/>
            <field name="groups" eval="[(4, ref('group_waf_preso_user'))]"/>
            <field name="domain_force">[('state', 'not in', ['cancelled'])]</field>
        </record>

        <record id="rule_dispatch_state_manager" model="ir.rule">
            <field name="name">Accès complet aux états pour responsables</field>
            <field name="model_id" ref="model_sale_order_line_dispatch_delivery"/>
            <field name="groups" eval="[(4, ref('group_waf_preso_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>