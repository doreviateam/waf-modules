<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category Views -->
    <record id="partner_interest_category_view_tree" model="ir.ui.view">
        <field name="name">partner.interest.category.tree</field>
        <field name="model">partner.interest.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="partner_interest_category_view_form" model="ir.ui.view">
        <field name="name">partner.interest.category.form</field>
        <field name="model">partner.interest.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence" groups="base.group_no_one"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Interest Views -->
    <record id="partner_interest_view_tree" model="ir.ui.view">
        <field name="name">partner.interest.tree</field>
        <field name="model">partner.interest</field>
        <field name="arch" type="xml">
            <tree string="Centres d'intérêt">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="code"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="partner_interest_view_form" model="ir.ui.view">
        <field name="name">partner.interest.form</field>
        <field name="model">partner.interest</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Description détaillée..."/>
                        </page>
                        <page string="Partenaires" name="partners">
                            <field name="partner_ids" domain="[('is_company', '=', True)]"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search Views -->
    <record id="partner_interest_view_search" model="ir.ui.view">
        <field name="name">partner.interest.search</field>
        <field name="model">partner.interest</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <separator/>
                <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivés" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Catégorie" name="category" context="{'group_by': 'category_id'}"/>
                    <filter string="Société" name="company" context="{'group_by': 'company_id'}" 
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <record id="partner_interest_category_view_search" model="ir.ui.view">
        <field name="name">partner.interest.category.search</field>
        <field name="model">partner.interest.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Société" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>
</odoo>