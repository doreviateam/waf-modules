<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_sale_order_line_dispatch_form" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.form</field>
        <field name="model">sale.order.line.dispatch</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" 
                            string="Confirmer" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_done" 
                            string="Terminer" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" 
                            string="Annuler" 
                            type="object" 
                            invisible="state not in ('draft', 'confirmed')"/>
                    <button name="action_draft" 
                            string="Remettre en brouillon" 
                            type="object" 
                            invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="order_id"/>
                            <field name="product_id"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="dispatch_date"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="delivery_id"/>
                            <field name="picking_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Notes sur la ligne de dispatch..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_sale_order_line_dispatch_tree" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.tree</field>
        <field name="model">sale.order.line.dispatch</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-warning="state == 'confirmed'" decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="product_uom"/>
                <field name="dispatch_date"/>
                <field name="delivery_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sale_order_line_dispatch_search" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.search</field>
        <field name="model">sale.order.line.dispatch</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="delivery_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Annulé" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Commande" name="order" context="{'group_by': 'order_id'}"/>
                    <filter string="Produit" name="product" context="{'group_by': 'product_id'}"/>
                    <filter string="État" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Date de répartition" name="dispatch_date" context="{'group_by': 'dispatch_date'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>