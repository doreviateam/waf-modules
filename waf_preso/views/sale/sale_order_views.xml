        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Ajout des champs de livraison dans l'en-tÃªte -->
            <!-- <xpath expr="//group[@name='order_details']" position="inside">
                <field name="delivery_zone_id" 
                       domain="[('id', 'in', available_delivery_zone_ids)]"/>
                <field name="delivery_weekday_id" 
                       domain="[('id', 'in', available_delivery_weekday_ids)]"/>
                <field name="delivery_time_slot_id" 
                       domain="[('id', 'in', available_delivery_time_slot_ids)]"/>
                <field name="available_delivery_zone_ids" invisible="1"/>
                <field name="available_delivery_weekday_ids" invisible="1"/>
                <field name="available_delivery_time_slot_ids" invisible="1"/>
            </xpath> -->

            <!-- Ajout des champs de dispatch dans les lignes de commande -->
            <!-- <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="after">
                <field name="dispatch_ids" widget="many2many_tags" optional="show"/>
                <field name="dispatch_state" optional="show"/>
            </xpath> -->

            <!-- Nouvel onglet Dispatches -->
            <xpath expr="//notebook/page[1]" position="after">
                <page string="Dispatches" name="dispatches">
                    <field name="dispatch_line_ids">
                        <tree>
                            <field name="order_line_id"/>
                            <field name="product_id"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="delivery_id"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Search View Inheritance -->
    <record id="view_sales_order_filter_inherit_waf_preso" model="ir.ui.view">
        <field name="name">sale.order.list.select.inherit.waf.preso</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="Zone de livraison" name="delivery_zone" 
                        context="{'group_by': 'delivery_zone_id'}"/>
                <filter string="Jour de livraison" name="delivery_weekday" 
                        context="{'group_by': 'delivery_weekday_id'}"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="delivery_zone_id"/>
                <field name="delivery_weekday_id"/>
                <field name="delivery_time_slot_id"/>
            </xpath>
        </field>
    </record>

    <!-- List View Inheritance -->
    <record id="view_order_tree_inherit_waf_preso" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.waf.preso</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="delivery_zone_id" optional="show"/>
                <field name="delivery_weekday_id" optional="show"/>
                <field name="delivery_time_slot_id" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>