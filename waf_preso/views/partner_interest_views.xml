<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action Window -->
    <record id="action_partner_interest" model="ir.actions.act_window">
        <field name="name">Centres d'intérêt</field>
        <field name="res_model">partner.interest</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{
            'search_default_active': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier centre d'intérêt !
            </p>
            <p>
                Les centres d'intérêt permettent de catégoriser vos groupements de partenaires.
            </p>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_partner_interest_form" model="ir.ui.view">
        <field name="name">partner.interest.form</field>
        <field name="model">partner.interest</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" 
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                        <button name="action_view_groupments" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="active_groupment_count"/> / <field name="groupment_count"/>
                                </span>
                                <span class="o_stat_text">Groupements</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nom du centre d'intérêt"/></h1>
                    </div>
                    <group>
                        <group name="main_info">
                            <field name="code" placeholder="Code unique"/>
                            <field name="sequence"/>
                            <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                        </group>
                        <group name="additional_info">
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" 
                                   placeholder="Description détaillée..."
                                   options="{'collaborative': true}"/>
                        </page>
                        <page string="Groupements" name="groupments">
                            <field name="groupment_ids" readonly="1">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="agent_id" widget="many2one_avatar"/>
                                    <field name="member_count" sum="Total"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_partner_interest_tree" model="ir.ui.view">
        <field name="name">partner.interest.tree</field>
        <field name="model">partner.interest</field>
        <field name="arch" type="xml">
            <tree sample="1" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="code" optional="show"/>
                <field name="name"/>
                <field name="active_groupment_count"/>
                <field name="groupment_count"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_partner_interest_kanban" model="ir.ui.view">
        <field name="name">partner.interest.kanban</field>
        <field name="model">partner.interest</field>
        <field name="arch" type="xml">
            <kanban sample="1" class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="active_groupment_count"/>
                <field name="groupment_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><field name="name"/></span>
                                    </strong>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="code"/>
                                    </small>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_right">
                                    <span class="badge rounded-pill text-bg-info">
                                        <field name="active_groupment_count"/> / <field name="groupment_count"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_partner_interest_search" model="ir.ui.view">
        <field name="name">partner.interest.search</field>
        <field name="model">partner.interest</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="user_ids"/>
                <separator/>
                <filter string="Mes centres d'intérêt" name="my_interests" 
                        domain="[('user_ids', 'in', uid)]"/>
                <filter string="Archivés" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Société" name="company" 
                            context="{'group_by': 'company_id'}" 
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_partner_interest"
              name="Centres d'intérêt"
              parent="menu_waf_config"
              action="action_partner_interest"
              sequence="20"/>
</odoo>