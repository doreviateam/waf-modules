<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TODO: vues pour la configuration des zones de livraison -->

    <!-- DeliveryWeekday Views -->
    <record id="delivery_weekday_view_tree" model="ir.ui.view">
        <field name="name">delivery.weekday.tree</field>
        <field name="model">delivery.weekday</field>
        <field name="arch" type="xml">
            <tree string="Jours de livraison">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="delivery_weekday_view_form" model="ir.ui.view">
        <field name="name">delivery.weekday.form</field>
        <field name="model">delivery.weekday</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Zones de livraison" name="zones">
                            <field name="zone_ids"/>
                        </page>
                        <page string="Clients" name="partners">
                            <field name="partner_ids" domain="[('is_company', '=', True)]"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="delivery_weekday_view_search" model="ir.ui.view">
        <field name="name">delivery.weekday.search</field>
        <field name="model">delivery.weekday</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivés" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- DeliveryTimeSlot Views -->
    <record id="delivery_time_slot_view_tree" model="ir.ui.view">
        <field name="name">delivery.time.slot.tree</field>
        <field name="model">delivery.time.slot</field>
        <field name="arch" type="xml">
            <tree string="Créneaux horaires">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="start_hour" widget="float_time"/>
                <field name="end_hour" widget="float_time"/>
                <field name="max_deliveries"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="delivery_time_slot_view_form" model="ir.ui.view">
        <field name="name">delivery.time.slot.form</field>
        <field name="model">delivery.time.slot</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="start_hour" widget="float_time"/>
                            <field name="end_hour" widget="float_time"/>
                            <field name="max_deliveries"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Zones de livraison" name="zones">
                            <field name="zone_ids"/>
                        </page>
                        <page string="Clients" name="partners">
                            <field name="partner_ids" domain="[('is_company', '=', True)]"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="delivery_time_slot_view_search" model="ir.ui.view">
        <field name="name">delivery.time.slot.search</field>
        <field name="model">delivery.time.slot</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivés" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
</odoo>