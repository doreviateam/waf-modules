<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_sale_order_line_dispatch_delivery_tree" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.delivery.tree</field>
        <field name="model">sale.order.line.dispatch.delivery</field>
        <field name="arch" type="xml">
            <tree string="Livraisons" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-warning="state == 'confirmed'" decoration-danger="state == 'cancel'">
                <field name="partner_id"/>
                <field name="delivery_zone_id"/>
                <field name="delivery_date"/>
                <field name="delivery_time_slot_id"/>
                <field name="delivery_carrier_id"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sale_order_line_dispatch_delivery_form" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.delivery.form</field>
        <field name="model">sale.order.line.dispatch.delivery</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" 
                            string="Confirmer" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_done" 
                            string="Terminer" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" 
                            string="Annuler" 
                            type="object" 
                            invisible="state in ('done', 'cancel')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="delivery_zone_id" options="{'no_create': True}"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="delivery_date"/>
                            <field name="delivery_time_slot_id" options="{'no_create': True}"/>
                            <field name="delivery_carrier_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sale_order_line_dispatch_delivery_search" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.delivery.search</field>
        <field name="model">sale.order.line.dispatch.delivery</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="delivery_zone_id"/>
                <field name="delivery_carrier_id"/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Annulé" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter string="Aujourd'hui" name="today" domain="[('delivery_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Cette semaine" name="this_week" domain="[('delivery_date', '&gt;=', context_today().strftime('%Y-%m-%d')), ('delivery_date', '&lt;=', (context_today() + datetime.timedelta(days=6)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Client" name="partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Zone" name="zone" context="{'group_by': 'delivery_zone_id'}"/>
                    <filter string="Date" name="date" context="{'group_by': 'delivery_date'}"/>
                    <filter string="État" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Société" name="company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_sale_order_line_dispatch_delivery_calendar" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.delivery.calendar</field>
        <field name="model">sale.order.line.dispatch.delivery</field>
        <field name="arch" type="xml">
            <calendar string="Dispatches" date_start="delivery_date" color="delivery_zone_id">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="delivery_time_slot_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>
</odoo>