<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Stock Picking Form -->
    <record id="view_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="delivery_zone_id" 
                       invisible="picking_type_code != 'outgoing'"
                       readonly="state == 'done'"
                       options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="delivery_date" 
                       invisible="picking_type_code != 'outgoing'"
                       readonly="state == 'done'"/>
                <field name="delivery_time_slot_id" 
                       invisible="picking_type_code != 'outgoing'"
                       readonly="state == 'done'"
                       options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Stock Picking Tree -->
    <record id="view_picking_tree_inherit" model="ir.ui.view">
        <field name="name">stock.picking.tree.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="scheduled_date" position="after">
                <field name="delivery_zone_id" optional="show"/>
                <field name="delivery_date" optional="show"/>
                <field name="delivery_time_slot_id" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Inherit Stock Picking Search -->
    <record id="view_picking_search_inherit" model="ir.ui.view">
        <field name="name">stock.picking.search.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="delivery_zone_id"/>
                <field name="delivery_time_slot_id"/>
            </field>
            <xpath expr="//filter[@name='picking_type']" position="before">
                <filter string="Zone de livraison" name="by_delivery_zone" domain="[]" context="{'group_by': 'delivery_zone_id'}"/>
                <filter string="Date de livraison" name="by_delivery_date" domain="[]" context="{'group_by': 'delivery_date'}"/>
                <filter string="CrÃ©neau horaire" name="by_time_slot" domain="[]" context="{'group_by': 'delivery_time_slot_id'}"/>
                <separator/>
            </xpath>
            <filter name="picking_type" position="after">
                <separator/>
                <filter string="Livraisons du jour" name="delivery_today" domain="[('delivery_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Livraisons de la semaine" name="delivery_this_week" domain="[('delivery_date', '&gt;=', context_today().strftime('%Y-%m-%d')), ('delivery_date', '&lt;=', (context_today() + datetime.timedelta(days=6)).strftime('%Y-%m-%d'))]"/>
            </filter>
        </field>
    </record>
</odoo>
