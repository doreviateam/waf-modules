<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Stock Move Form -->
    <record id="view_stock_move_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.form.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="picking_type_code" invisible="1"/>
            </field>
            <xpath expr="//group[@name='origin_grp']" position="inside">
                <field name="delivery_zone_id" 
                       invisible="picking_type_code != 'outgoing'"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Stock Move Tree -->
    <record id="view_stock_move_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.tree.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <field name="reference" position="after">
                <field name="picking_type_code" invisible="1"/>
            </field>
            <field name="location_dest_id" position="after">
                <field name="delivery_zone_id" 
                       optional="show"
                       invisible="picking_type_code != 'outgoing'"/>
            </field>
        </field>
    </record>

    <!-- Inherit Stock Move Search -->
    <record id="view_stock_move_search_inherit" model="ir.ui.view">
        <field name="name">stock.move.search.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_search"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="delivery_zone_id"/>
            </field>
            <filter name="by_product" position="after">
                <filter string="Zone de livraison" name="by_delivery_zone" domain="[]" context="{'group_by': 'delivery_zone_id'}"/>
            </filter>
        </field>
    </record>
</odoo> 