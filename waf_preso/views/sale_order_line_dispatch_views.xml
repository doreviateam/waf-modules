<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_line_dispatch_tree" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.tree</field>
        <field name="model">sale.order.line.dispatch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="delivery_partner_id"/>
                <field name="quantity"/>
                <field name="date_dispatch"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_sale_order_line_dispatch_form" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.form</field>
        <field name="model">sale.order.line.dispatch</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="order_line_id" invisible="1"/>
                            <field name="order_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="allowed_delivery_partner_ids" invisible="1"/>
                            <field name="delivery_partner_id"/>
                            <field name="delivery_partner_ids" invisible="1"/>
                            <field name="shipping_address_id"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="date_dispatch"/>
                            <field name="dispatched_qty"/>
                            <field name="remaining_qty"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Livraisons planifiées">
                            <field name="delivery_ids">
                                <tree editable="bottom">
                                    <field name="scheduled_date"/>
                                    <field name="shipping_address_id"/>
                                    <field name="quantity"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sale_order_line_dispatch_form_wizard" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.form.wizard</field>
        <field name="model">sale.order.line.dispatch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="order_id" invisible="1"/>
                        <field name="allowed_delivery_partner_ids" invisible="1"/>
                        <field name="order_line_id" 
                               domain="[('order_id', '=', order_id)]"
                               options="{'no_create': True}"/>
                        <field name="product_id" readonly="1"/>
                        <field name="remaining_qty" readonly="1"/>
                        <field name="quantity"/>
                        <field name="delivery_partner_id" 
                               domain="[('id', 'in', allowed_delivery_partner_ids)]"
                               options="{'no_create': True, 'no_open': True}"
                               context="{'show_address': 1}"/>
                        <field name="date_dispatch"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Créer" type="object" class="btn-primary" special="save"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_sale_order_line_dispatch_search" model="ir.ui.view">
        <field name="name">sale.order.line.dispatch.search</field>
        <field name="model">sale.order.line.dispatch</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="delivery_partner_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Validé" name="done" domain="[('state','=','done')]"/>
                <filter string="Annulé" name="cancel" domain="[('state','=','cancel')]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Commande" name="group_by_order" context="{'group_by':'order_id'}"/>
                    <filter string="Point de livraison" name="group_by_delivery" context="{'group_by':'delivery_partner_id'}"/>
                    <filter string="État" name="group_by_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_create_dispatch_line" model="ir.actions.act_window">
        <field name="name">Nouvelle ligne de dispatch</field>
        <field name="res_model">sale.order.line.dispatch</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sale_order_line_dispatch_form_wizard"/>
        <field name="target">new</field>
        <field name="context">{'default_order_id': id}</field>
    </record>
</odoo>