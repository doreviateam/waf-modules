<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Terminal de paiement -->
        <record id="product_terminal" model="product.product">
            <field name="name">Terminal de paiement</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="type">consu</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="default_code">P1-TPE</field>
            <field name="description">Terminal de paiement électronique</field>
            <field name="list_price">299.99</field>
            <field name="standard_price">199.99</field>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="True"/>
        </record>

        <!-- Service de réparation -->
        <record id="product_repair" model="product.product">
            <field name="name">Réparation TPE</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="type">service</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="default_code">P2-REP</field>
            <field name="description">Service de réparation de terminal de paiement</field>
            <field name="list_price">89.99</field>
            <field name="standard_price">49.99</field>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
        </record>

        <!-- Service de préparation -->
        <record id="product_preparation" model="product.product">
            <field name="name">Préparation TPE</field>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="type">service</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="default_code">P3-PREP</field>
            <field name="description">Service de préparation et paramétrage de terminal</field>
            <field name="list_price">49.99</field>
            <field name="standard_price">29.99</field>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
        </record>
    </data>
</odoo>