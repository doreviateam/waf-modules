<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Séquence pour les zones de livraison -->
        <record id="seq_delivery_zone" model="ir.sequence">
            <field name="name">Zone de livraison</field>
            <field name="code">delivery.zone</field>
            <field name="prefix">ZONE/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquence pour les dispatches -->
        <record id="seq_sale_order_line_dispatch" model="ir.sequence">
            <field name="name">Dispatch Sequence</field>
            <field name="code">sale.order.line.dispatch</field>
            <field name="prefix">DISP/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Nouvelle séquence pour les livraisons -->
        <record id="seq_sale_order_line_dispatch_delivery" model="ir.sequence">
            <field name="name">Dispatch Delivery Sequence</field>
            <field name="code">sale.order.line.dispatch.delivery</field>
            <field name="prefix">DEL/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
