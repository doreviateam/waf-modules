<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_insee" model="ir.ui.view">
        <field name="name">res.partner.form.insee</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <field name="hierarchy_relation" position="before">
                <field name="insee_siret"
                       placeholder="SIRET de l'établissement"
                       options="{'horizontal': true}" 
                       invisible="not is_company"
                       required="is_company"
                       style="{
                                'color': is_siret_valid ? '#00A09D' : '#DC3545', 
                                'width': '10ch'
                            }"/>
                <field name="is_siret_valid" invisible="1"/>
                <field name="ctrl_message" 
                       invisible="1"/>
            </field>

            <xpath expr="//field[@name='siret']" position="attributes">
                <attribute name="invisible">not insee_siret</attribute>
                <attribute name="readonly">insee_siret</attribute>
            </xpath>

            <xpath expr="//field[@name='state_id']" position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>

            <xpath expr="//field[@name='state_id']" position="after">
                <field name="department_id" nolabel="country_code == 'FR'"/>
            </xpath>        
            

            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Données INSEE" name="insee_data" invisible="not siret">
                    <group>
                        <group>
                            <field name="insee_siret"/>
                            <field name="insee_siren"/>
                            <field name="insee_enseigne"/>
                            <field name="insee_tva"/>
                            <button name="action_verify_siret_insee" 
                                    type="object" 
                                    string="Mise à jour INSEE"
                                    class="oe_highlight"
                                    
                                    help="Mettre à jour les données depuis l'INSEE"/>
                        </group>
                        <group>
                            <field name="insee_activite_principale"/>
                            <field name="last_insee_sync"/>
                        </group>
                    </group>
                    <group string="Géolocalisation" invisible="insee_latitude == 0">
                        <group>
                            <field name="insee_latitude"/>
                            <field name="insee_longitude"/>
                        </group>
                    </group>
                </page>
            </xpath>

            <!-- Rendre le champ TVA toujours modifiable -->
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="readonly">False</attribute>
            </xpath>

            <field name="insee_siret" position="after">
                <button name="action_verify_siret_insee" 
                        type="object" 
                        string="Mise à jour INSEE"
                        class="oe_highlight"
                        invisible="not siret or last_insee_sync"
                        help="Mettre à jour les données depuis l'INSEE"/>
            </field>
        </field>
    </record>
</odoo>