<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="waf_layout" name="WAF Layout" inherit_id="website.layout">
        <xpath expr="//main" position="inside">
            <div id="wrap" class="waf-content"/>
        </xpath>
    </template>

    <template id="homepage" name="homepage">
        <t t-call="website.layout">
            <t t-set="pageName" t-value="'home'" />
            <t t-call="waf_wo4.hero_section"/>
            <t t-call="waf_wo4.content_section"/>
            <t t-call="waf_wo4.footer_section"/>
        </t>
    </template>
</odoo>