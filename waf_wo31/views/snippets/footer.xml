                                <a href="/confidentialite">Confidentialité</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- Inject Footer into Layout -->
    <template id="layout_footer_custom" inherit_id="website.layout" name="WAF Custom Footer">
        <xpath expr="//footer" position="replace">
            <t t-call="waf_wo31.s_footer"/>
        </xpath>
    </template>
