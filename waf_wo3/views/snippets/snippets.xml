<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ajout des snippets dans l'éditeur -->
    <template id="custom_snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="waf_wo3.s_header"
               t-thumbnail="/waf_wo3/static/src/img/snippets/s_header.png"/>
            <t t-snippet="waf_wo3.s_footer"
               t-thumbnail="/waf_wo3/static/src/img/snippets/s_footer.png"/>
            <t t-snippet="waf_wo3.s_contact_form"
               t-thumbnail="/waf_wo3/static/src/img/blocks/block_contact_form.png"/>
        </xpath>
    </template>

    <!-- Options d'édition des snippets -->
    <template id="snippet_options" inherit_id="website.snippet_options">
        <xpath expr="//div" position="inside">
            <!-- Options du formulaire de contact -->
            <div data-js="ContactForm" data-selector=".s_contact_form">
                <we-colorpicker string="Couleur de fond" data-select-style="background-color"/>
                <we-input string="Titre" data-select-style="h2"/>
                <we-input string="Sous-titre" data-select-style=".lead"/>
            </div>
            
            <!-- Options du footer -->
            <div data-selector=".s_footer">
                <we-colorpicker string="Background Color" data-select-style="true" data-css-property="background-color" data-color-prefix="bg-"/>
            </div>
        </xpath>
    </template>
</odoo> 