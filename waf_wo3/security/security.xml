<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Groupe pour les blogueurs -->
        <record id="group_blog_author" model="res.groups">
            <field name="name">Blogueur</field>
            <field name="category_id" ref="base.module_category_website"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Règles d'accès pour le blog -->
        <record id="blog_post_public" model="ir.rule">
            <field name="name">Blog Post: Public</field>
            <field name="model_id" ref="website_blog.model_blog_post"/>
            <field name="domain_force">[('website_published', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
        </record>
    </data>
</odoo> 