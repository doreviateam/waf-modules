<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    Ce template est actuellement en attente d'utilisation future.
    Il servira à :
    1. L'intégration des composants React
    2. L'application du thème Moderna
    3. Des modifications globales du layout
    
    Pour l'instant, il est conservé comme préparation pour :
    - La modernisation future de l'interface
    - L'ajout de nouvelles fonctionnalités
    - L'amélioration de l'expérience utilisateur
    -->
    
    <template id="moderna_layout" inherit_id="website.layout">
        <xpath expr="//main" position="attributes">
            <attribute name="class" add="moderna-main" separator=" "/>
        </xpath>
        
        <!-- Ajout des classes pour les sections -->
        <xpath expr="//section" position="attributes">
            <attribute name="class" add="moderna-section" separator=" "/>
            <attribute name="data-aos">fade-up</attribute>
        </xpath>
    </template>

    <!--
    Conteneur préparé pour les futurs composants React.
    Il sera utilisé quand nous implémenterons :
    - Le nouveau header en React
    - D'autres composants dynamiques
    - Des fonctionnalités interactives améliorées
    -->
    <template id="react_container" inherit_id="website.layout">
        <xpath expr="//footer" position="before">
            <div id="react-components"/>
        </xpath>
    </template>
</odoo>