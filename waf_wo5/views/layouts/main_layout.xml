<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="main_layout" name="WAF Main Layout" inherit_id="website.layout">
        <!-- Personnalisation du head -->
        <xpath expr="//head" position="inside">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
            <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&amp;display=swap" rel="stylesheet"/>
        </xpath>

        <!-- Gestion du menu admin -->
        <xpath expr="//div[hasclass('o_frontend_to_backend_nav')]" position="attributes">
            <attribute name="t-attf-class">o_frontend_to_backend_nav position-fixed #{'' if user_id.has_group('base.group_user') else 'd-none'}</attribute>
        </xpath>

        <!-- Personnalisation du main -->
        <xpath expr="//main" position="replace">
            <main class="waf-main">
                <div id="wrap" class="waf-content">
                    <t t-out="0"/>
                </div>
            </main>
        </xpath>
    </template>
</odoo>