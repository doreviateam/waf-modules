<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Remplacer le footer par défaut -->
    <template id="footer_default" inherit_id="website.layout" name="Footer Layout">
        <xpath expr="//footer" position="replace">
            <footer class="o_footer">
                <div class="container py-5">
                    <div class="row">
                        <!-- Expérience -->
                        <div class="col-lg-4 mb-4">
                            <h5 class="footer-title">Expérience</h5>
                            <ul class="footer-list">
                                <li>Expert en monétique et gestion de parc depuis 1999</li>
                                <li>Distribution de Terminaux de Paiement Electroniques</li>
                                <li>Déploiement de solutions de paiement autonomes et intégrées</li>
                                <li>Maintenance, réparation et reconditionnement des TPE</li>
                                <li>Installation de solutions de paiement sur site</li>
                                <li>Conseil et assistance pour la sécurité des transactions</li>
                                <li>Intégration E-Business Odoo</li>
                            </ul>
                        </div>

                        <!-- Savoir faire -->
                        <div class="col-lg-4 mb-4">
                            <h5 class="footer-title">Savoir faire Multi-marques</h5>
                            <ul class="footer-list">
                                <li>INGENICO / VERIFONE / PAX</li>
                                <li>Mise en service et livraison du matériel prêt à l'emploi sous 24h</li>
                                <li>Acheminement des flux monétique vers les différents serveurs bancaires</li>
                                <li>Service de maintenance par hotline et par échange standard à J ouvré +1</li>
                            </ul>
                        </div>

                        <!-- Chiffres clés -->
                        <div class="col-lg-4 mb-4">
                            <h5 class="footer-title">Chiffres clés</h5>
                            <ul class="footer-list">
                                <li>TPE en exploitation : + de 10 000</li>
                                <li>Transactions / mois : + de 12 M€</li>
                                <li>Flux annuels : + de 3 Md€</li>
                            </ul>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <!-- Informations -->
                        <div class="col-lg-3 mb-4">
                            <h5 class="footer-title">Informations</h5>
                            <ul class="footer-links">
                                <li><a href="/promotions">Promotions</a></li>
                                <li><a href="/nouveaux-produits">Nouveaux produits</a></li>
                                <li><a href="/meilleures-ventes">Meilleures ventes</a></li>
                                <li><a href="/magasins">Nos magasins</a></li>
                                <li><a href="/contact">Contactez-nous</a></li>
                                <li><a href="/conditions">Conditions d'utilisation</a></li>
                                <li><a href="/sitemap">Plan du site</a></li>
                            </ul>
                        </div>

                        <!-- Mon compte -->
                        <div class="col-lg-3 mb-4">
                            <h5 class="footer-title">Mon compte</h5>
                            <ul class="footer-links">
                                <li><a href="/my/orders">Mes commandes</a></li>
                                <li><a href="/my/credit-notes">Mes avoirs</a></li>
                                <li><a href="/my/address">Mes adresses</a></li>
                                <li><a href="/my/account">Mes informations personnelles</a></li>
                                <li><a href="/my/coupons">Mes bons de réduction</a></li>
                            </ul>
                        </div>

                        <!-- Adresse -->
                        <div class="col-lg-3 mb-4">
                            <h5 class="footer-title">Adresse</h5>
                            <address class="footer-address">
                                <p>Doreviateam</p>
                                <p>8 Quai de la fosse</p>
                                <p>44410 Nantes</p>
                                <p>Appelez-nous au : <span class="text-primary">01 XX XX XX XX</span></p>
                                <p>E-mail : <a href="mailto:commercial@doreviateam.fr">commercial@doreviateam.fr</a></p>
                            </address>
                        </div>

                        <!-- Newsletter -->
                        <div class="col-lg-3 mb-4">
                            <h5 class="footer-title">Lettre d'informations</h5>
                            <p>Inscrivez-vous pour recevoir les dernières nouvelles et mises à jour par courriel.</p>
                            <div class="newsletter-form">
                                <div class="input-group">
                                    <input type="email" class="form-control" placeholder="Votre email"/>
                                    <button class="btn btn-primary">S'inscrire</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Copyright -->
                <div class="footer-bottom py-3">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <p class="mb-0">&#169; 2024 Doreviateam - Tous droits réservés</p>
                            </div>
                            <div class="col-md-6 text-end">
                                <span>Propulsé par <a target="_blank" href="http://www.odoo.com?utm_source=db&amp;utm_medium=footer">Odoo</a></span>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </xpath>
    </template>
</odoo>