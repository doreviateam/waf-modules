            <field name="month">6</field>
            <field name="day">10</field>
            <field name="date">2024-06-10</field>
            <field name="description">Commémoration de l'abolition de l'esclavage en Guyane</field>
        </record>

        <!-- Jours fériés Réunion -->
        <record id="holiday_re_abolition" model="calendar.holiday">
            <field name="name">Abolition de l'esclavage (Réunion)</field>
            <field name="region_id" ref="region_re"/>
