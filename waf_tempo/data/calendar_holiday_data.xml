<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Jours fériés Guadeloupe -->
        <record id="holiday_gp_abolition" model="calendar.holiday">
            <field name="name">Abolition de l'esclavage (Guadeloupe)</field>
            <field name="region_id" ref="region_gp"/>
            <field name="type">fixed</field>
            <field name="month">5</field>
            <field name="day">27</field>
            <field name="date" eval="time.strftime('%Y-05-27')"/>
            <field name="weekday">1</field>
            <field name="description">Commémoration de l'abolition de l'esclavage en Guadeloupe</field>
        </record>

        <record id="holiday_gp_schoelcher" model="calendar.holiday">
            <field name="name">Fête Victor Schœlcher</field>
            <field name="region_id" ref="region_gp"/>
            <field name="type">fixed</field>
            <field name="month">7</field>
            <field name="day">21</field>
            <field name="date" eval="time.strftime('%Y-07-21')"/>
            <field name="description">Célébration de Victor Schœlcher, artisan de l'abolition de l'esclavage</field>
        </record>

        <!-- Jours fériés Martinique -->
