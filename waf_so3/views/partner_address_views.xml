<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue form -->
        <record id="view_partner_address_form" model="ir.ui.view">
            <field name="name">partner.address.form</field>
            <field name="model">partner.address</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_dispatches" type="object" class="oe_stat_button" icon="fa-truck">
                                <field name="dispatch_count" widget="statinfo" string="Dispatches"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g. HÃ´tel de la Poste"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="partner_ids" widget="many2many_tags"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" 
                                        options="{'no_open': True, 'no_create': True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" 
                                        options="{'no_open': True, 'no_create': True}"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="comment" placeholder="Internal Notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue tree -->
        <record id="view_partner_address_tree" model="ir.ui.view">
            <field name="name">partner.address.tree</field>
            <field name="model">partner.address</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_ids" widget="many2many_tags"/>
                    <field name="city"/>
                    <field name="zip"/>
                    <field name="country_id"/>
                    <field name="dispatch_count"/>
                </tree>
            </field>
        </record>

        <!-- Vue search -->
        <record id="view_partner_address_search" model="ir.ui.view">
            <field name="name">partner.address.search</field>
            <field name="model">partner.address</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_ids"/>
                    <field name="city"/>
                    <field name="zip"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Type" name="type" context="{'group_by': 'type'}"/>
                        <filter string="City" name="city" context="{'group_by': 'city'}"/>
                        <filter string="Country" name="country" context="{'group_by': 'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_partner_address" model="ir.actions.act_window">
            <field name="name">Delivery Addresses</field>
            <field name="res_model">partner.address</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_partner_address"
                  name="Delivery Addresses"
                  action="action_partner_address"
                  parent="sale.menu_sale_config"
                  sequence="25"/>
    </data>
</odoo> 