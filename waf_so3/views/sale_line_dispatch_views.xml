<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_sale_line_dispatch_form" model="ir.ui.view">
        <field name="name">sale.line.dispatch.form</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" 
                            string="Confirmer" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_done" 
                            string="Terminer" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" 
                            string="Annuler" 
                            type="object"
                            invisible="state not in ('draft', 'confirmed')"/>
                    <button name="action_draft" 
                            string="Remettre en brouillon" 
                            type="object"
                            invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-truck"
                                string="Bon de livraison"
                                invisible="not picking_id">
                            <field name="picking_id" invisible="1"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="dispatch_id" readonly="state != 'draft'"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="sale_order_line_id" readonly="state != 'draft'"
                                   domain="[('order_id', '=', sale_order_id)]"
                                   options="{'no_create': True}"/>
                            <field name="delivery_address_id" readonly="state != 'draft'"
                                   options="{'no_create': True}"/>
                            <field name="scheduled_date" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="product_uom_qty" readonly="state != 'draft'"/>
                            <field name="product_uom" readonly="1"/>
                            <field name="price_unit" readonly="1"/>
                            <field name="price_subtotal" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_sale_line_dispatch_tree" model="ir.ui.view">
        <field name="name">sale.line.dispatch.tree</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'"
                  decoration-warning="state == 'confirmed'"
                  decoration-success="state == 'done'"
                  decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="sale_order_line_id"/>
                <field name="delivery_address_id"/>
                <field name="scheduled_date"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="price_unit"/>
                <field name="price_subtotal"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sale_line_dispatch_search" model="ir.ui.view">
        <field name="name">sale.line.dispatch.search</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="sale_order_line_id"/>
                <field name="delivery_address_id"/>
                <field name="product_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Annulé" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <filter string="Date planifiée" name="scheduled_date" date="scheduled_date"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Dispatch" name="dispatch" context="{'group_by': 'dispatch_id'}"/>
                    <filter string="Commande" name="sale_order" context="{'group_by': 'sale_order_id'}"/>
                    <filter string="État" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Date planifiée" name="scheduled_date_group" context="{'group_by': 'scheduled_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sale_line_dispatch" model="ir.actions.act_window">
        <field name="name">Lignes de Dispatch</field>
        <field name="res_model">sale.line.dispatch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première ligne de dispatch !
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sale_line_dispatch"
              name="Lignes de Dispatch"
              action="action_sale_line_dispatch"
              parent="sale.sale_order_menu"
              sequence="41"/>
</odoo>