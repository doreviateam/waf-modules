<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inheritance de la vue formulaire -->
    <record id="view_order_form_inherit_waf_so3" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.waf.so3</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='locked']" position="after">
                <field name="dispatch_ids" invisible="1"/>
                <field name="active_dispatch_id" invisible="1"/>
            </xpath>
            <!-- Ajout du champ delivery_mode avant partner_id -->
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="delivery_mode" 
                       widget="radio" 
                       options="{'horizontal': true}"
                       readonly="state not in ['draft', 'sent']"/>
            </xpath>

            <!-- Modification des boutons -->
            <xpath expr="//header/button[1]" position="before">
                <button name="action_create_dispatch"
                        string="Créer Dispatch"
                        type="object"
                        class="btn-info"
                        invisible="delivery_mode != 'dispatch' or dispatch_ids or state != 'sale'"/>
                <button name="action_add_dispatch"
                        string="Ajouter Dispatch"
                        type="object"
                        class="btn-info"
                        invisible="delivery_mode != 'dispatch' or not active_dispatch_id or state != 'sale'"/>
            </xpath>

            <!-- Mise à jour des champs de dispatch dans la ligne de commande -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="after">
                <field name="dispatched_qty" optional="hide" 
                       column_invisible="parent.delivery_mode != 'dispatch'"/>
                <field name="remaining_qty" optional="hide"
                       column_invisible="parent.delivery_mode != 'dispatch'"/>
                <field name="dispatch_progress" widget="percentage" optional="hide"
                       column_invisible="parent.delivery_mode != 'dispatch'"/>
            </xpath>

            <!-- Ajout du pourcentage global de dispatch -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="dispatch_percent_global" string="Progression" widget="progressbar" 
                       max="100" help="Pourcentage global des quantités dispatchées"
                       invisible="delivery_mode != 'dispatch'"/>
            </xpath>
        </field>
    </record>
</odoo>