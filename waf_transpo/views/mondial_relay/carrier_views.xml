<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_carrier_form_inherit_mondialrelay" model="ir.ui.view">
        <field name="name">delivery.carrier.form.inherit.mondialrelay</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position="after">
                <page string="Configuration Mondial Relay" name="mondialrelay_config"
                      invisible="delivery_type != 'mondialrelay'">
                    <group>
                        <group string="Options de livraison">
                            <field name="can_generate_return" readonly="0"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo> 