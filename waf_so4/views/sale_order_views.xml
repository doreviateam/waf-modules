<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inheritance de la vue formulaire -->
    <record id="view_order_form_inherit_waf_so4" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.waf.so4</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="locked" position="after">
                <field name="dispatch_id" invisible="1"/>
                <field name="active_dispatch_id" invisible="1"/>
            </field>

            <field name="partner_id" position="after">
                <field name="stakeholder_ids" 
                       widget="many2many_tags"
                       invisible="delivery_mode != 'dispatch'"
                       options="{'no_create': True}"/>
            </field>

            <field name="partner_shipping_id" position="attributes">
                <attribute name="invisible">delivery_mode == 'dispatch'</attribute>
            </field>

            <!-- Ajout du champ delivery_mode avant partner_id -->
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="delivery_mode" 
                       widget="radio" 
                       options="{'horizontal': true}"
                       readonly="state not in ['draft', 'sent']"/>
            </xpath>

            <!-- Modification des boutons -->
            <xpath expr="//header/button[1]" position="before">
                <button name="action_show_dispatch"
                        string="Dispatch"
                        type="object"
                        class="oe_highlight"
                        invisible="delivery_mode != 'dispatch'"
                        icon="fa-truck"/>
            </xpath>

            <!-- Suppression du bouton redondant -->
            <xpath expr="//header/button[@id='create_invoice']" position="after">
            </xpath>

            <!-- Mise Ã  jour des champs de dispatch dans la ligne de commande -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="after">
                <field name="dispatched_qty" optional="hide" 
                       column_invisible="parent.delivery_mode != 'dispatch'"/>
                <field name="remaining_qty" optional="hide"
                       column_invisible="parent.delivery_mode != 'dispatch'"/>
                <field name="dispatch_progress" widget="percentage" optional="hide"
                       column_invisible="parent.delivery_mode != 'dispatch'"/>
            </xpath>

            <!-- Ajout du pourcentage global de dispatch -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="dispatch_percent_global" string="Progress" widget="progressbar" 
                       max="100" help="Global percentage of dispatched quantities"
                       invisible="delivery_mode != 'dispatch'"/>
            </xpath>

            <!-- Ajout du bouton "Voir les BL Dispatch" -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_dispatch_pickings"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="delivery_mode != 'dispatch'">
                    <field name="picking_count_from_dispatch" widget="statinfo" string="Dispatch DOs"/>
                </button>
                <button name="action_view_dispatch_lines"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-list"
                        invisible="delivery_mode != 'dispatch'">
                    <field name="dispatch_line_count" widget="statinfo" string="Dispatch Lines"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>