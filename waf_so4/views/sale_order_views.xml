<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inheritance de la vue formulaire -->
    <record id="view_order_form_inherit_waf_so4" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.waf.so4</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Champs techniques -->
            <field name="locked" position="after">
                <field name="dispatch_id" invisible="1"/>
                <field name="active_dispatch_id" invisible="1"/>
            </field>

            <!-- En-tÃªte et informations principales -->
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="delivery_mode" 
                       widget="radio" 
                       options="{'horizontal': true}"
                       readonly="state not in ['draft', 'sent']"/>
            </xpath>

            <field name="partner_invoice_id" position="after">
                <field name="stakeholder_ids" 
                       widget="many2many_tags"
                       invisible="delivery_mode != 'dispatch'"
                       required="delivery_mode == 'dispatch'"
                       options="{'no_create': True, 'no_edit': True}"/>
            </field>

            <field name="partner_shipping_id" position="attributes">
                <attribute name="invisible">delivery_mode == 'dispatch'</attribute>
            </field>

            <!-- Boutons d'action -->
            <xpath expr="//header/button[1]" position="before">
                <button name="action_show_dispatch"
                        string="Dispatch"
                        type="object"
                        class="oe_highlight"
                        invisible="delivery_mode != 'dispatch' or not order_line"
                        icon="fa-truck"/>
            </xpath>

            <!-- Smart buttons -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_dispatch_pickings"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="delivery_mode != 'dispatch'">
                    <field name="picking_count_from_dispatch" widget="statinfo" string="Deliveries"/>
                </button>
                <button name="action_view_dispatch_lines"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-list"
                        invisible="delivery_mode != 'dispatch'">
                    <field name="dispatch_line_count" widget="statinfo" string="Dispatch Lines"/>
                </button>
            </xpath>

            <!-- Informations de progression -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="dispatch_percent_global" 
                       string="Dispatch Progress" 
                       widget="progressbar"
                       invisible="delivery_mode != 'dispatch'"
                       max="100" 
                       class="oe_inline"
                       help="Global percentage of dispatched quantities"/>
            </xpath>

            <!-- Lignes de commande -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="after">
                <field name="dispatched_qty_line" 
                       optional="hide"
                       column_invisible="parent.delivery_mode != 'dispatch'"/>
                <field name="remaining_qty_line" 
                       optional="hide"
                       column_invisible="parent.delivery_mode != 'dispatch'"/>
                <field name="dispatch_progress_line" 
                       widget="percentage" 
                       optional="hide"
                       column_invisible="parent.delivery_mode != 'dispatch'"/>
            </xpath>
        </field>
    </record>
</odoo>