<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_sale_dispatch_form" model="ir.ui.view">
        <field name="name">sale.dispatch.form</field>
        <field name="model">sale.dispatch</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="picking_ids" invisible="1"/>
                    <field name="draft_line_count" invisible="1"/>
                    <field name="confirmed_line_count" invisible="1"/>
                    <field name="picking_state" invisible="1"/>
                    
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_create_pickings" string="Créer les BL" type="object" class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Annuler" type="object" invisible="state in ('cancel', 'done')"/>
                    <button name="action_set_to_draft" string="Remettre en brouillon" type="object" invisible="state != 'cancel'"/>
                    <button name="action_view_pickings" 
                            string="Bons de livraison" 
                            type="object" 
                            class="btn-primary"
                            invisible="picking_count == 0"/>
                            
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pickings"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-truck"
                                invisible="picking_count == 0">
                            <field name="picking_count" widget="statinfo" string="Livraisons"/>
                        </button>
                        <button name="action_view_stakeholders" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-users">
                            <div class="o_stat_info">
                                <field name="stakeholder_count" class="o_stat_value"/>
                                <span class="o_stat_text">Stakeholders</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="mandator_id"/>
                            <field name="commitment_date"/>
                        </group>
                        <group>
                            <field name="stakeholder_ids" widget="many2many_tags"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="dispatch_progress" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lignes de dispatch" name="dispatch_lines">
                            <field name="line_ids">
                                <tree editable="bottom" decoration-readonly="state != 'draft'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="sale_order_id" string="Commande" column_invisible="1"/>
                                    <field name="sale_order_line_id" string="Ligne de commande" 
                                           domain="[('order_id', '=', parent.sale_order_id), ('remaining_qty_line', '>', 0)]"/>
                                    <field name="product_id" string="Produit" column_invisible="1"/>
                                    <field name="product_uom_qty" string="Quantité"/>
                                    <field name="product_uom" string="Unité" optional="hide"/>
                                    <field name="stakeholder_id" string="Stakeholder" 
                                           domain="[('id', 'in', parent.stakeholder_ids)]"/>
                                    <field name="partner_shipping_id" string="Adresse de livraison" 
                                           domain="[('type', '=', 'delivery'), ('parent_id', '=', stakeholder_id)]"/>
                                    <field name="delivery_contact_display" string="Point de livraison" column_invisible="1"/>
                                    <field name="scheduled_date" string="Date prévue"/>
                                    <field name="state" string="État" 
                                           decoration-success="state == 'done'" 
                                           decoration-info="state == 'confirmed'" 
                                           decoration-warning="state == 'partially_available'" 
                                           decoration-muted="state == 'draft'"
                                           decoration-danger="state == 'cancel'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Ajouter une note interne..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_sale_dispatch_tree" model="ir.ui.view">
        <field name="name">sale.dispatch.tree</field>
        <field name="model">sale.dispatch</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'"
                  decoration-warning="state == 'confirmed'"
                  decoration-success="state == 'done'"
                  decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="mandator_id"/>
                <field name="stakeholder_ids" widget="many2many_tags"/>
                <field name="commitment_date"/>
                <field name="picking_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sale_dispatch_search" model="ir.ui.view">
        <field name="name">sale.dispatch.search</field>
        <field name="model">sale.dispatch</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="mandator_id" widget="res_partner_many2one"/>
                <field name="stakeholder_ids" widget="many2many_tags"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Annulé" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter string="À livrer aujourd'hui" name="today" 
                        domain="[('commitment_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Commande" name="sale_order" context="{'group_by': 'sale_order_id'}"/>
                    <filter string="Mandataire" name="mandator" context="{'group_by': 'mandator_id'}"/>
                    <filter string="État" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Date prévue" name="commitment_date" context="{'group_by': 'commitment_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sale_dispatch" model="ir.actions.act_window">
        <field name="name">Dispatches</field>
        <field name="res_model">sale.dispatch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier dispatch !
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sale_dispatch"
              name="Dispatches"
              action="action_sale_dispatch"
              parent="sale.sale_order_menu"
              sequence="40"/>
</odoo>