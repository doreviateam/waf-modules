<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_sale_dispatch_form" model="ir.ui.view">
        <field name="name">sale.dispatch.form</field>
        <field name="model">sale.dispatch</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" 
                            string="Confirm" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft' or picking_ids"/>
                    <button name="action_cancel" 
                            string="Cancel" 
                            type="object"
                            invisible="state in ('cancel', 'done') or not picking_ids"/>
                    <button name="action_draft" 
                            string="Set to Draft" 
                            type="object"
                            invisible="state != 'cancel' or picking_ids"/>
                    <button name="action_view_pickings" 
                            string="Delivery Orders" 
                            type="object" 
                            class="btn-primary"
                            invisible="not picking_ids"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pickings"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-truck"
                                invisible="picking_count == 0">
                            <field name="picking_count" widget="statinfo" string="Deliveries"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="mandator_id" context="{'show_address': 1}"/>
                            <field name="stakeholder_ids" widget="many2many_tags" 
                                   options="{'no_create': True}"
                                   domain="[('is_company', '=', True)]"
                                   readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="dispatch_progress" widget="progressbar" string="Progress" max="100"/>
                            <field name="company_id" invisible="1"/>
                            <field name="picking_ids" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="commitment_date" 
                                   readonly="state != 'draft'"
                                   force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Dispatch Lines" name="dispatch_lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="sale_order_id" readonly="1" force_save="1"/>
                                    <field name="sale_order_line_id" string="Order"/>
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="product_uom"/>
                                    <field name="stakeholder_id" 
                                           domain="[('id', 'in', parent.stakeholder_ids)]"/>
                                    <field name="partner_shipping_id" 
                                           domain="[('type', '=', 'delivery'), ('parent_id', '=', stakeholder_id)]"
                                           context="{'show_address': 1}"
                                           options="{'always_reload': True}"/>
                                    <field name="delivery_contact_display" invisible="1"/>
                                    <field name="scheduled_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_sale_dispatch_tree" model="ir.ui.view">
        <field name="name">sale.dispatch.tree</field>
        <field name="model">sale.dispatch</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'"
                  decoration-warning="state == 'confirmed'"
                  decoration-success="state == 'done'"
                  decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="mandator_id"/>
                <field name="stakeholder_ids" widget="many2many_tags"/>
                <field name="commitment_date"/>
                <field name="picking_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sale_dispatch_search" model="ir.ui.view">
        <field name="name">sale.dispatch.search</field>
        <field name="model">sale.dispatch</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="mandator_id" widget="res_partner_many2one"/>
                <field name="stakeholder_ids" widget="many2many_tags"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter string="To Deliver Today" name="today" 
                        domain="[('commitment_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Order" name="sale_order" context="{'group_by': 'sale_order_id'}"/>
                    <filter string="Mandator" name="mandator" context="{'group_by': 'mandator_id'}"/>
                    <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Expected Date" name="commitment_date" context="{'group_by': 'commitment_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sale_dispatch" model="ir.actions.act_window">
        <field name="name">Dispatches</field>
        <field name="res_model">sale.dispatch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dispatch!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sale_dispatch"
              name="Dispatches"
              action="action_sale_dispatch"
              parent="sale.sale_order_menu"
              sequence="40"/>
</odoo>