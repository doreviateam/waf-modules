<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_sale_line_dispatch_form" model="ir.ui.view">
        <field name="name">sale.line.dispatch.form</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" 
                            string="Confirm" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_done" 
                            string="Mark as Done" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" 
                            string="Cancel" 
                            type="object"
                            invisible="state not in ('draft', 'confirmed')"/>
                    <button name="action_draft" 
                            string="Set to Draft" 
                            type="object"
                            invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-truck"
                                string="Delivery Order"
                                invisible="not picking_id">
                            <field name="picking_id" invisible="1"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="dispatch_id"/>
                            <field name="sale_order_id"/>
                            <field name="sale_order_line_id" 
                                   domain="[('order_id', '=', sale_order_id), ('remaining_qty', '>', 0)]"/>
                            <field name="product_id"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                        </group>
                        <group>
                            <field name="stakeholder_id"/>
                            <field name="partner_shipping_id" 
                                   domain="[('type', '=', 'delivery'), ('parent_id', '=', stakeholder_id)]"
                                   context="{'default_type': 'delivery', 'show_address': 1}"
                                   options="{'always_reload': True}"
                                   required="1"/>
                            <field name="delivery_contact_display" invisible="1"/>
                            <field name="scheduled_date"/>
                            <field name="picking_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Financial Information" name="financial_info">
                            <group>
                                <group>
                                    <field name="price_unit"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="price_subtotal"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_sale_line_dispatch_tree" model="ir.ui.view">
        <field name="name">sale.line.dispatch.tree</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="dispatch_id"/>
                <field name="sale_order_id"/>
                <field name="product_id"/>
                <field name="stakeholder_id"/>
                <field name="delivery_contact_display"/>
                <field name="product_uom_qty"/>
                <field name="scheduled_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sale_line_dispatch_search" model="ir.ui.view">
        <field name="name">sale.line.dispatch.search</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="dispatch_id"/>
                <field name="sale_order_id"/>
                <field name="product_id"/>
                <field name="stakeholder_id"/>
                <field name="partner_shipping_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancel')]"/>
                <group expand="0" string="Group By">
                    <filter string="Dispatch" name="group_by_dispatch" context="{'group_by': 'dispatch_id'}"/>
                    <filter string="Sale Order" name="group_by_sale_order" context="{'group_by': 'sale_order_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sale_line_dispatch" model="ir.actions.act_window">
        <field name="name">Dispatch Lines</field>
        <field name="res_model">sale.line.dispatch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dispatch line!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sale_line_dispatch"
              name="Dispatch Lines"
              action="action_sale_line_dispatch"
              parent="sale.sale_order_menu"
              sequence="41"/>
</odoo>