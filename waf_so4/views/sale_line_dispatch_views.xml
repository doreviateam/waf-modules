<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_sale_line_dispatch_form" model="ir.ui.view">
        <field name="name">sale.line.dispatch.form</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                    <button name="action_confirm" 
                            string="Confirmer" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_done" 
                            string="Terminer" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" 
                            string="Annuler" 
                            type="object" 
                            invisible="state in ('done', 'cancel')"/>
                    <button name="action_set_to_draft" 
                            string="Remettre en brouillon" 
                            type="object" 
                            invisible="state != 'cancel'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="order_info" string="Informations commande">
                            <field name="dispatch_id" readonly="1"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="sale_order_line_id" 
                                   domain="[('order_id', '=', sale_order_id)]" 
                                   options="{'no_create': True}"
                                   readonly="state != 'draft'"/>
                            <field name="sequence" groups="base.group_no_one"/>
                        </group>
                        <group name="delivery_info" string="Informations livraison">
                            <field name="stakeholder_id" 
                                   options="{'no_create': True}"
                                   readonly="state != 'draft'"/>
                            <field name="partner_shipping_id" 
                                   options="{'no_create': True, 'no_edit': True}"
                                   readonly="state != 'draft'"/>
                            <field name="delivery_contact_display" readonly="1"/>
                            <field name="scheduled_date"
                                   readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <group>
                        <group name="product_info" string="Informations produit">
                            <field name="product_id" readonly="1"/>
                            <field name="product_uom_qty" readonly="state != 'draft'"/>
                            <field name="product_uom" readonly="1"/>
                            <field name="price_unit" readonly="1"/>
                        </group>
                        <group name="status_info" string="Informations état">
                            <field name="currency_id" invisible="1"/>
                            <field name="price_subtotal" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Livraison" name="delivery">
                            <group>
                                <group>
                                    <field name="picking_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_sale_line_dispatch_tree" model="ir.ui.view">
        <field name="name">sale.line.dispatch.tree</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <tree string="Lignes de dispatch" 
                  editable="bottom" 
                  decoration-muted="state == 'cancel'"
                  decoration-success="state == 'done'"
                  decoration-info="state == 'confirmed'">
                <field name="sequence" widget="handle"/>
                <field name="name" readonly="1" optional="show"/>
                <field name="sale_order_id" readonly="1" optional="show"/>
                <field name="sale_order_line_id" 
                       domain="[('order_id', '=', sale_order_id)]" 
                       options="{'no_create': True}"
                       readonly="state != 'draft'"/>
                <field name="product_id" readonly="1"/>
                <field name="stakeholder_id" 
                       options="{'no_create': True}"
                       readonly="state != 'draft'"/>
                <field name="partner_shipping_id" 
                       options="{'no_create': True, 'no_edit': True}"
                       readonly="state != 'draft'"/>
                <field name="product_uom_qty"
                       readonly="state != 'draft'"/>
                <field name="product_uom" readonly="1" optional="hide"/>
                <field name="price_subtotal" sum="Total" optional="show"/>
                <field name="scheduled_date"
                       readonly="state != 'draft'"/>
                <field name="picking_id" optional="hide"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sale_line_dispatch_search" model="ir.ui.view">
        <field name="name">sale.line.dispatch.search</field>
        <field name="model">sale.line.dispatch</field>
        <field name="arch" type="xml">
            <search string="Rechercher les lignes de dispatch">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="product_id"/>
                <field name="stakeholder_id"/>
                <field name="partner_shipping_id"/>
                <field name="delivery_contact_display"/>
                <separator/>
                <filter string="Mes lignes" name="my_lines" domain="[('create_uid', '=', uid)]"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Annulé" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter string="À livrer aujourd'hui" 
                        name="to_deliver_today" 
                        domain="[('scheduled_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="En retard" 
                        name="late" 
                        domain="[('scheduled_date', '&lt;', context_today().strftime('%Y-%m-%d')), ('state', 'not in', ['done', 'cancel'])]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Commande" name="group_by_order" context="{'group_by': 'sale_order_id'}"/>
                    <filter string="Stakeholder" name="group_by_stakeholder" context="{'group_by': 'stakeholder_id'}"/>
                    <filter string="Adresse de livraison" name="group_by_shipping" context="{'group_by': 'partner_shipping_id'}"/>
                    <filter string="Date prévue" name="group_by_date" context="{'group_by': 'scheduled_date'}"/>
                    <filter string="État" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sale_line_dispatch" model="ir.actions.act_window">
        <field name="name">Lignes de dispatch</field>
        <field name="res_model">sale.line.dispatch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'search_default_draft': 1,
            'search_default_to_deliver_today': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première ligne de dispatch !
            </p>
            <p>
                Les lignes de dispatch vous permettent de gérer la livraison de vos commandes
                en spécifiant les quantités, les adresses de livraison et les stakeholders.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sale_line_dispatch"
              name="Lignes de dispatch"
              action="action_sale_line_dispatch"
              parent="sale.sale_order_menu"
              sequence="41"/>
</odoo>