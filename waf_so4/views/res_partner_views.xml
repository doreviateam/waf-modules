<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue de base pour les mandataires -->
    <record id="view_partner_form_mandator" model="ir.ui.view">
        <field name="name">res.partner.form.mandator</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Document Settings" name="document_settings">
                    <group>
                        <group string="Company Information Display">
                            <field name="hide_main_company"/>
                            <field name="hide_company_on" invisible="not hide_main_company"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="view_partner_form_inherit_waf_so4" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.waf.so4</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_orders" 
                        type="object"
                        class="oe_stat_button"
                        icon="fa-shopping-cart"
                        invisible="order_count == 0">
                    <field name="order_count" widget="statinfo" string="Commandes"/>
                </button>
            </div>
        </field>
    </record>
</odoo> 