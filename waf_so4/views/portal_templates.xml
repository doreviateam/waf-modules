<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template pour la liste des commandes -->
    <template id="portal_my_orders_inherit" inherit_id="sale.portal_my_orders">
        <xpath expr="//thead/tr/th[1]" position="after">
            <th class="text-center">Delivery Mode</th>
        </xpath>

        <xpath expr="//t[@t-foreach='orders']/tr/td[1]" position="after">
            <td class="text-center align-middle">
                <t t-if="order.delivery_mode">
                    <span t-if="order.delivery_mode == 'dispatch'" class="badge bg-primary text-white">
                        Dispatch
                    </span>
                    <span t-if="order.delivery_mode == 'standard'" class="badge bg-light text-dark">
                        Standard
                    </span>
                </t>
            </td>
        </xpath>
    </template>

    <!-- Template pour le dÃ©tail d'une commande -->
    <template id="sale_order_portal_content_inherit" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//section[@id='details']" position="after">
            <t t-if="sale_order.delivery_mode == 'dispatch'">
                <section class="mt-4">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h3 class="mb-0" style="color: #666;"><t t-esc="sale_order.dispatch_id.name"/></h3>
                                <div>
                                    <span class="badge rounded-pill bg-info me-2">
                                        <t t-esc="sale_order.dispatch_id.dispatch_progress"/>%
                                    </span>
                                    <span t-field="sale_order.dispatch_id.state" 
                                          t-attf-class="badge rounded-pill #{sale_order.dispatch_id.state == 'draft' and 'bg-secondary' or 
                                                       sale_order.dispatch_id.state == 'confirmed' and 'bg-info' or 
                                                       sale_order.dispatch_id.state == 'done' and 'bg-success' or 
                                                       sale_order.dispatch_id.state == 'cancel' and 'bg-danger'}"/>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead>
                                        <tr class="table-light">
                                            <th>Product</th>
                                            <th>Stakeholder</th>
                                            <th>Delivery Address</th>
                                            <th>Scheduled Date</th>
                                            <th class="text-end">Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="sale_order.dispatch_id.line_ids" t-as="line">
                                            <tr>
                                                <td><t t-esc="line.product_id.name"/></td>
                                                <td><t t-esc="line.stakeholder_id.name"/></td>
                                                <td>
                                                    <t t-if="line.delivery_address_id">
                                                        <t t-esc="line.delivery_address_id.name"/>
                                                    </t>
                                                </td>
                                                <td><t t-esc="line.scheduled_date" t-options='{"widget": "date"}'/></td>
                                                <td class="text-end">
                                                    <span t-esc="line.product_uom_qty"/>
                                                    <span t-esc="'Units'" class="text-muted"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </xpath>
    </template>
</odoo> 