<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Layout avec pied de page -->
    <template id="external_layout_clean">
        <div class="article o_report_layout_clean" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
            <!-- Pied de page -->
            <div class="footer o_clean_footer">
                <div class="row">
                    <div class="col-6 text-center">
                        <span t-field="o.company_id.name"/>
                    </div>
                    <div class="col-6 text-end">
                        Page <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <!-- Template principal -->
    <template id="report_delivery_dispatch_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="waf_so3.external_layout_clean">
                    <div class="page">
                        <!-- Logos et Adresses -->
                        <div class="row mb-5">
                            <div t-if="not (o.mandator_id.hide_main_company and 
                                         (o.mandator_id.hide_company_on == 'all' or 
                                          o.mandator_id.hide_company_on == 'delivery'))" 
                                 class="col-6">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" class="img-fluid" style="max-height: 70px;"/>
                                <div class="mt-2">
                                    <div t-field="o.company_id.name"/>
                                    <div t-field="o.company_id.street"/>
                                    <div t-field="o.company_id.street2"/>
                                    <div>
                                        <span t-field="o.company_id.zip"/> <span t-field="o.company_id.city"/>
                                    </div>
                                    <div t-field="o.company_id.country_id"/>
                                </div>
                            </div>
                            <div class="col-6 text-end">
                                <img t-if="o.mandator_id.image_1920" t-att-src="image_data_uri(o.mandator_id.image_1920)" class="img-fluid" style="max-height: 70px;"/>
                                <div class="mt-2">
                                    <div t-field="o.mandator_id.name"/>
                                    <div t-field="o.mandator_id.street"/>
                                    <div t-field="o.mandator_id.street2"/>
                                    <div>
                                        <span t-field="o.mandator_id.zip"/> <span t-field="o.mandator_id.city"/>
                                    </div>
                                    <div t-field="o.mandator_id.country_id"/>
                                </div>
                            </div>
                        </div>

                        <!-- Titre -->
                        <h2 class="text-center mb-4">Delivery Note - Dispatch</h2>

                        <!-- Références -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <strong>Delivery Note: </strong><span t-field="o.name"/><br/>
                                <t t-if="o.sale_id">
                                    <strong>Order: </strong><span t-field="o.sale_id.name"/><br/>
                                </t>
                                <t t-if="o.dispatch_id">
                                    <strong>Dispatch Ref: </strong><span t-field="o.dispatch_id.name"/>
                                </t>
                            </div>
                        </div>

                        <!-- Blocs d'adresses -->
                        <div class="row mb-4">
                            <!-- Stakeholder -->
                            <div class="col-6">
                                <div class="border p-2">
                                    <strong>Stakeholder:</strong>
                                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["name", "address", "phone"], "no_marker": True}'/>
                                </div>
                            </div>
                            <!-- Adresse de livraison -->
                            <div class="col-6">
                                <div class="border p-2">
                                    <strong>Delivery Address:</strong>
                                    <div t-if="o.delivery_address_id">
                                        <div t-field="o.delivery_site_name"/>
                                        <div t-field="o.delivery_street"/>
                                        <div t-field="o.delivery_street2"/>
                                        <div>
                                            <span t-field="o.delivery_zip"/> <span t-field="o.delivery_city"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12 text-end">
                                <strong>Shipping Date: </strong><span t-field="o.scheduled_date"/>
                            </div>
                        </div>

                        <!-- Tableau des produits -->
                        <table class="table table-sm mt-4">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th class="text-end">Ordered</th>
                                    <th class="text-end">Delivered</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.move_ids.filtered(lambda x: x.product_uom_qty)" t-as="move">
                                    <tr>
                                        <td><span t-field="move.product_id.display_name"/></td>
                                        <td class="text-end">
                                            <span t-field="move.product_uom_qty"/>
                                            <span t-field="move.product_uom"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="move.product_qty"/>
                                            <span t-field="move.product_uom"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Signatures -->
                        <div class="row mt-5">
                            <div class="col-6">
                                <div class="border-top">
                                    <p class="mt-2">Delivered by Dispatch:</p>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border-top">
                                    <p class="mt-2">Received by:</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Action de rapport -->
    <record id="action_report_delivery_dispatch" model="ir.actions.report">
        <field name="name">Delivery Note - Dispatch</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">waf_so3.report_delivery_dispatch_document</field>
        <field name="report_file">waf_so3.report_delivery_dispatch_document</field>
        <field name="print_report_name">'Delivery Note - Dispatch - %s' % object.name</field>
        <field name="binding_model_id" ref="model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>
</odoo> 