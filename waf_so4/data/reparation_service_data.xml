<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Produit Move 5000 Bluetooth CLESS -->
        <record id="service_reparation" model="product.template">
            <field name="name">Réparation</field>
            <field name="type">service</field>
            <field name="detailed_type">service</field>
            <field name="image_1920" type="base64" file="waf_so4/data/img/reparation_service.png"/>
            
            <!-- Informations produit -->
            <field name="default_code">SERVREPAR</field>
            <field name="barcode">SERVREPAR</field>
            <field name="categ_id" ref="product.product_category_all"/>
            
            <!-- Prix -->
            <field name="list_price">30</field>
            <field name="standard_price">30</field>
            
            <!-- Unités de mesure -->
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            
            <!-- Configuration -->
            <field name="active" eval="True"/>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            <!-- <field name="tracking">serial</field> -->
            <field name="tracking">none</field>
            
            <!-- Configuration de stock -->
            <field name="responsible_id" ref="base.user_admin"/>

            <!-- Configuration des taxes -->
            <field name="taxes_id" eval="[(6, 0, [ref('waf_so4.tax_vat_sale_20')])]"/>
            
            <!-- Description -->
            <field name="description" type="html">
                <p>Réparation de terminal de paiement</p>
                <ul>
                    <li>Réparation de terminal Move 5000 Bluetooth CLESS</li>
                    <li>Réparation de terminal ICT 250</li>
                </ul>
            </field>
        </record>
    </data>
</odoo>
