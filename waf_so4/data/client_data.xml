<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Client commande -->
        <record id="partner_demo_cm" model="res.partner">
            <field name="name">Crédit Mutuel De l'Hérault</field>
            <field name="email">contact@cm34.fr</field>
            <field name="phone">+33 4 52 45 58 69</field>
            <field name="street">123 Avenue de la République</field>
            <field name="city">Montpellier</field>
            <field name="zip">34000</field>
            <field name="country_id" ref="base.fr"/>
            <field name="company_type">company</field>
            <field name="customer_rank">1</field>
            <field name="website">https://creditmutuel.com</field>
            <field name="image_1920" type="base64" file="waf_so4/data/img/logo_cm.png"/>
        </record>


        <!-- Client logistique -->
        <record id="partner_demo_cmh" model="res.partner">
            <field name="name">Comptoir Mécanographique</field>
            <field name="email">contact@cmh.fr</field>
            <field name="phone">+33 1 23 45 67 89</field>
            <field name="street">123 Avenue des Tests</field>
            <field name="city">Montpellier</field>
            <field name="zip">34008</field>
            <field name="country_id" ref="base.fr"/>
            <field name="company_type">company</field>
            <field name="customer_rank">1</field>
            <field name="website">https://cmh34.com</field>
            <field name="image_1920" type="base64" file="waf_so4/data/img/logo_cmh.jpg"/>
        </record>

        <!-- Adresses partner.address -->
        <record id="partner_address_demo_1" model="partner.address">
            <field name="name">Bar de la rotonde</field>
            <field name="type">delivery</field>
            <field name="street">15 Rue de la Logistique</field>
            <field name="street2">Zone Industrielle Est</field>
            <field name="zip">75011</field>
            <field name="city">Paris</field>
            <field name="country_id" ref="base.fr"/>
            <field name="phone">+33 1 23 45 67 89</field>
            <field name="email">entrepot.central@cmh.fr</field>
            <field name="comment">Horaires de livraison : 8h-16h
Accès poids lourds par l'entrée Nord
Badge d'accès obligatoire
Contact sur place : Jean Martin</field>
            <field name="active" eval="True"/>
            <field name="partner_ids" eval="[(6, 0, [ref('partner_demo_cmh'), ref('partner_demo_cm')])]"/>
        </record>

        <record id="partner_address_demo_2" model="partner.address">
            <field name="name">Pharmacie Galibère</field>
            <field name="type">delivery</field>
            <field name="street">42 Avenue des Transporteurs</field>
            <field name="street2">Parc d'Activités Sud</field>
            <field name="zip">69007</field>
            <field name="city">Lyon</field>
            <field name="country_id" ref="base.fr"/>
            <field name="phone">+33 4 56 78 90 12</field>
            <field name="email">plateforme.lyon@cmh.fr</field>
            <field name="comment">Horaires de livraison : 6h-20h
Quais de déchargement : 1 à 5
Réservation obligatoire 24h à l'avance
Contact : Marie Dupont</field>
            <field name="active" eval="True"/>
            <field name="partner_ids" eval="[(6, 0, [ref('partner_demo_cmh'), ref('partner_demo_cm')])]"/>
        </record>

        <!-- Portal Access for Crédit Mutuel -->
        <record id="portal_user_cm" model="res.users">
            <field name="name">Crédit Mutuel De l'Hérault</field>
            <field name="login">cm</field>
            <field name="password">cm</field>  <!-- will be hashed automatically -->
            <field name="partner_id" ref="partner_demo_cm"/>
            <field name="groups_id" eval="[(6,0,[ref('base.group_portal')])]"/>
            <field name="image_1920" type="base64" file="waf_so4/data/img/logo_cm.png"/>
        </record>

        <!-- Portal Access for Comptoir Mécanographique -->
        <record id="portal_user_cmh34" model="res.users">
            <field name="name">Comptoir Mécanographique</field>
            <field name="login">cmh</field>
            <field name="password">cmh</field>  <!-- will be hashed automatically -->
            <field name="partner_id" ref="partner_demo_cmh"/>
            <field name="groups_id" eval="[(6,0,[ref('base.group_portal')])]"/>
            <field name="image_1920" type="base64" file="waf_so4/data/img/logo_cmh.jpg"/>
        </record>

    </data>
</odoo>