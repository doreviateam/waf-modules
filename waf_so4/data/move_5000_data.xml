<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Produit Move 5000 Bluetooth CLESS -->
        <record id="product_move_5000" model="product.template">
            <field name="name">Move 5000 Bluetooth CLESS</field>
            <field name="type">consu</field>
            <field name="detailed_type">consu</field>
            <field name="image_1920" type="base64" file="waf_so4/data/img/ingenico_Move_5000.jpg"/>
            
            <!-- Informations produit -->
            <field name="default_code">MOVE5000BT</field>
            <field name="barcode">MOVE5000BT</field>
            <field name="categ_id" ref="product.product_category_all"/>
            
            <!-- Prix -->
            <field name="list_price">352.99</field>
            <field name="standard_price">352.99</field>
            
            <!-- Unités de mesure -->
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            
            <!-- Configuration -->
            <field name="active" eval="True"/>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="True"/>
            <!-- <field name="tracking">serial</field> -->
            <field name="tracking">none</field>
            
            <!-- Configuration de stock -->
            <field name="responsible_id" ref="base.user_admin"/>
            <field name="weight">0.583</field>

            <!-- Configuration des taxes -->
            <field name="taxes_id" eval="[(6, 0, [ref('waf_so4.tax_vat_sale_20')])]"/>
            
            <!-- Description -->
            <field name="description" type="html">
                <p>Terminal de paiement Move 5000 Bluetooth CLESS</p>
                <ul>
                    <li>Terminal de paiement portable</li>
                    <li>Connexion Bluetooth pour communication avec smartphone/tablette</li>
                    <li>Paiement sans contact</li>
                    <li>Imprimante thermique intégrée</li>
                    <li>Batterie longue durée</li>
                    <li>Certifié PCI-PTS 5.x</li>
                </ul>
            </field>
        </record>
    </data>
</odoo>
